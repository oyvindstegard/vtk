<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- XML resource -->

  <bean id="xmlResource" class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="xml-resource"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="textResourceTypeDefinition" />
    <property name="assertions">
      <list>
        <ref bean="contentTypeMatchesXml" />
      </list>
    </property>
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="xmlGuessedCharacterEncodingPropDef" />
        <ref bean="xmlCharacterEncodingPropDef" />
        <ref bean="schemaPropDef" />
      </list>
    </property>
  </bean>


  <bean id="schemaPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="schema" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="schemaEvaluator" />
  </bean>

  <bean id="abstractXPathEvaluator"
        class="org.vortikal.repository.resourcetype.property.XPathEvaluator"
        abstract="true">
    <property name="valueFactory" ref="valueFactory" />
  </bean>


  <bean id="schemaEvaluator"
        class="org.vortikal.repository.resourcetype.property.XMLSchemaEvaluator" />


  <!-- Overrides 'guessedCharacterEncodingPropDef' in 'abstractTextResource' resource type -->
  <bean id="xmlGuessedCharacterEncodingPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="guessedCharacterEncoding" />
    <property name="type" ref="TYPE_STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="true" />
    <property name="createEvaluator" ref="xmlGuessedCharacterEncodingEvaluator" />
    <property name="contentModificationEvaluator" ref="xmlGuessedCharacterEncodingEvaluator" />
    <!--property name="defaultValue" ref="defaultXmlResourceCharacterEncoding" /-->
  </bean>

  <bean id="defaultXmlResourceCharacterEncoding"
        class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="valueFactory" />
    <property name="targetMethod" value="createValue" />
    <property name="arguments">
      <list>
        <ref bean="defaultXmlResourceCharacterEncodingString" />
        <ref bean="TYPE_STRING" />
      </list>
    </property>
  </bean>



  <bean id="defaultXmlResourceCharacterEncodingString" class="java.lang.String">
    <constructor-arg><value>${defaultXmllResourceCharacterEncoding}</value></constructor-arg>
  </bean>

  <bean id="xmlGuessedCharacterEncodingEvaluator" 
        class="org.vortikal.repository.resourcetype.property.XMLCharacterEncodingEvaluator">
    <property name="defaultEncoding" ref="defaultXmlResourceCharacterEncodingString" />
  </bean>


  <!-- Overrides 'characterEncodingPropDef' in 'text' resource type -->
  <bean id="xmlCharacterEncodingPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="characterEncoding" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="true" />
    <property name="createEvaluator" ref="xmlCharacterEncodingEvaluator" />
    <property name="contentModificationEvaluator" ref="xmlCharacterEncodingEvaluator" />
    <property name="propertiesModificationEvaluator" ref="xmlCharacterEncodingEvaluator" />
  </bean>

  <bean id="xmlCharacterEncodingEvaluator"
        class="org.vortikal.repository.resourcetype.property.FirstMatchPropertyEvaluator">
    <property name="propertyDefinitions">
      <list>
        <ref bean="userSpecifiedCharacterEncodingPropDef" />
        <ref bean="xmlGuessedCharacterEncodingPropDef" />
      </list>
    </property>
  </bean>

</beans>
