<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- Semester XML resource -->

  <bean id="semesterXmlResource" class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="semester"/>
    <property name="namespace" ref="SEMESTER_NAMESPACE" /> <!-- studier-namespace for alt ? -->
    <property name="parentTypeDefinition" ref="managedXmlResource" />
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="semesterEmnekodePropDef" />
        <ref bean="semesterSemesterPropDef" />
        <ref bean="semesterAarPropDef" />
        <ref bean="semesterSpraakPropDef" />
      </list>
    </property>
    <property name="assertions">
      <list>
        <ref bean="schemaIsSemester" />
      </list>
    </property>
  </bean>

  <bean id="SEMESTER_NAMESPACE" class="org.vortikal.repository.Namespace">
    <constructor-arg value="emne" />
    <constructor-arg value="http://www.uio.no/xsd/studier/semester" />
  </bean>


  <bean id="schemaIsSemester" 
        class="org.vortikal.web.service.ResourcePropertyRegexpAssertion">
    <property name="namespace" value="http://www.uio.no/vortex/custom-properties" />
    <property name="name" value="schema" />
    <property name="pattern" value="http://www.uio.no/xsd/studier/kurs/v00.*" />
  </bean>


  <bean id="semesterEmnekodePropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="emnekode" /> <!-- mixin? -->
    <property name="type" ref="TYPE_STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="semesterEmnekodeEvaluator" />
  </bean>

  <bean id="semesterEmnekodeEvaluator" class="org.vortikal.repository.resourcetype.property.XMLSchemaEvaluator" />


  <bean id="semesterSemesterPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="semester" />
    <property name="type" ref="TYPE_STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="semesterSemesterEvaluator" />
  </bean>

  <bean id="semesterSemesterEvaluator" class="org.vortikal.repository.resourcetype.property.XMLSchemaEvaluator" />


  <bean id="semesterAarPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="aar" />
    <property name="type" ref="TYPE_INT" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="semesterAarEvaluator" />
  </bean>

  <bean id="semesterAarEvaluator" class="org.vortikal.repository.resourcetype.property.XMLSchemaEvaluator" />


  <bean id="semesterSpraakPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="spraak" />
    <property name="type" ref="TYPE_STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="true" />
    <property name="defaultValue">
      <bean class="org.vortikal.repository.resourcetype.Value">
        <property name="value" value="bokmaal" />
      </bean>
    </property>
    <property name="contentModificationEvaluator" ref="semesterSpraakEvaluator" />
  </bean>

  <bean id="semesterSpraakEvaluator" class="org.vortikal.repository.resourcetype.property.XMLSchemaEvaluator" />



</beans>
