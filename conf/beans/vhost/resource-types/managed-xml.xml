<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- Managed XML resource -->

  <bean id="managedXmlResource" class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="managed-xml"/>
    <property name="namespace" ref="CUSTOM_NAMESPACE" />
    <property name="parentTypeDefinition" ref="xmlResource" />
    <property name="assertions">
      <list>
        <ref bean="schemaPropSet" />
      </list>
    </property>
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="webEditPropDef" />
        <ref bean="transformViewPropDef" />
        <ref bean="viewXslStylesheetPropDef" />
        <ref bean="editXslStylesheetPropDef" />
      </list>
    </property>
  </bean>

  <bean id="webEditPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="web-edit" />
    <property name="type" ref="TYPE_STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>



  <bean id="transformViewPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="transform-view" />
    <property name="type" ref="TYPE_STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>


  <bean id="viewXslStylesheetPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="view-xsl-ref" />
    <property name="type" ref="TYPE_STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="viewXslEvaluator" />
  </bean>

  <bean id="viewXslEvaluator"
        class="org.vortikal.repository.resourcetype.property.XMLStylesheetEvaluator">
    <property name="stylesheetReferenceResolvers" ref="standardXslStylesheetResolvers" />
  </bean>


  <bean id="editXslStylesheetPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="edit-xsl-ref" />
    <property name="type" ref="TYPE_STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="editXslEvaluator" />
  </bean>

  <bean id="editXslEvaluator"
        class="org.vortikal.repository.resourcetype.property.XMLStylesheetEvaluator">
    <property name="stylesheetReferenceResolvers" ref="editXslStylesheetResolvers" />
  </bean>


</beans>
