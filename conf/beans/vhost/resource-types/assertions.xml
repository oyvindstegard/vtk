<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- Assertion that matches all collection resources -->
  <bean id="collectionAssertion"
        class="org.vortikal.web.service.ResourceIsCollectionAssertion" />

  <!-- Assertion that matches all non-collection resources (files) -->
  <bean id="fileAssertion"
        class="org.vortikal.web.service.ResourceIsCollectionAssertion">
    <property name="invert" value="true"/>
  </bean>

  <bean id="schemaPropSet" 
        class="org.vortikal.web.service.ResourcePropertyAssertion">
    <!--property name="namespace" ref="CUSTOM_NAMESPACE" /-->
    <property name="namespace" ref="CUSTOM_NAMESPACE" />
    <property name="name" value="schema" />    
    <property name="checkExistenceOnly" value="true" />
  </bean>


  <!-- Assertion that matches resources with the property
       custom:web-edit = 'yes' -->
  <bean id="webEditable" 
        class="org.vortikal.web.service.ResourcePropertyAssertion">
    <property name="namespace" ref="CUSTOM_NAMESPACE" />
    <property name="name" value="web-edit" />
    <property name="value" value="yes" />
  </bean>
                    
  <!-- Assertion that matches resources with the property
       custom:transform-view = 'yes' -->
  <bean id="viewTransformable" 
        class="org.vortikal.web.service.ResourcePropertyAssertion">
    <property name="namespace" ref="CUSTOM_NAMESPACE" />
    <property name="name" value="transform-view" />
    <property name="value" value="yes" />
  </bean>

  <!-- Assertion that matches on all textual content types: -->
  <bean id="contentTypeIsTextual" 
        class="org.vortikal.web.service.ResourceContentTypeRegexpAssertion">
    <property name="pattern" value="(application/xml)|(text/(.+))" />
    <property name="exceptionPattern" value="text/rtf" />
  </bean>



</beans>
