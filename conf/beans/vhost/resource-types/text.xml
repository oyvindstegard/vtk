<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- Abstract text resource -->


  <bean id="abstractTextResourceTypeDefinition"
        class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="abstractTextResource"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="fileResourceTypeDefinition" />
    <property name="assertions">
      <list>
        <!-- FIXME -->
        <ref bean="contentTypeIsTextual" />
      </list>
    </property>
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="userSpecifiedCharacterEncodingPropDef" />
        <ref bean="guessedCharacterEncodingPropDef" />
      </list>
    </property>
  </bean>

  <!-- Assertion that matches on all textual content types: -->
  <bean id="contentTypeIsTextual" 
        class="org.vortikal.web.service.ResourceContentTypeRegexpAssertion">
    <property name="pattern" value="(application/xml)|(text/(.+))" />
    <property name="exceptionPattern" value="text/rtf" />
  </bean>

  <bean id="userSpecifiedCharacterEncodingPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="userSpecifiedCharacterEncoding" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
    <property name="validator" ref="characterEncodingValidator" />
  </bean>


  <bean id="guessedCharacterEncodingPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="guessedCharacterEncoding" />
    <property name="type" ref="TYPE_STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="true" />
    <property name="createEvaluator" ref="abstractTextResourceEncodingEvaluator" />
    <property name="contentModificationEvaluator" ref="abstractTextResourceEncodingEvaluator" />
  </bean>


  <bean id="abstractTextResourceEncodingEvaluator" 
        class="org.vortikal.repository.resourcetype.property.FixedValuePropertyEvaluator">
    <property name="value" ref="defaultTextResourceEncoding" />
  </bean>


  <bean id="defaultTextResourceEncoding"
    class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="valueFactory" />
    <property name="targetMethod" value="createValue" />
    <property name="arguments">
      <list>
        <value>utf-8</value>
        <ref bean="TYPE_STRING" />
      </list>
    </property>
  </bean>


  <bean id="characterEncodingValidator"
        class="org.vortikal.repository.resourcetype.property.CharacterEncodingValidator" />


  <!-- Text resource -->

  
  <bean id="textResourceTypeDefinition"
        class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="text"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="abstractTextResourceTypeDefinition" />
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="characterEncodingPropDef" />
      </list>
    </property>
  </bean>

  <bean id="characterEncodingPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="characterEncoding" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="true" />
    <property name="createEvaluator" ref="characterEncodingEvaluator" />
    <property name="contentModificationEvaluator" ref="characterEncodingEvaluator" />
    <property name="propertiesModificationEvaluator" ref="characterEncodingEvaluator" />
  </bean>

  <bean id="characterEncodingEvaluator"
        class="org.vortikal.repository.resourcetype.property.FirstMatchPropertyEvaluator">
    <property name="propertyDefinitions">
      <list>
        <ref bean="userSpecifiedCharacterEncodingPropDef" />
        <ref bean="guessedCharacterEncodingPropDef" />
      </list>
    </property>
  </bean>


</beans>
