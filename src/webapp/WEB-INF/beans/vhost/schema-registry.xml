<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
  "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
   <!-- XML schema registry -->
   <bean id="schemaRegistry" class="org.vortikal.xml.XmlSchemaRegistry">
     <property name="cacheTimeoutSeconds" value="${xmlSchemaCacheSeconds}" />
   </bean>

  <bean id="schemaRegistrySchedulerFactory"
        class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
    <property name="triggers">
      <list>
        <ref local="refreshXMLSchemaTrigger"/>
      </list>
    </property>
  </bean>

  <bean id="refreshXMLSchemaTrigger"
        class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <property name="jobDetail">
      <ref bean="refreshXMLSchemaJobDetail"/>
    </property>
    <property name="startDelay" value="60000" />
    <property name="repeatInterval" value="600000" />
  </bean>

  <bean id="refreshXMLSchemaJobDetail" 
        class="org.vortikal.scheduling.quartz.VortikalMethodInvokingJobDetailFactoryBean">
    <property name="group" value="system" />
    <property name="targetObject"><ref bean="schemaRegistry"/></property>
    <property name="targetMethod"><value>refresh</value></property>
  </bean>

</beans>
