<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

  <!-- See http://ehcache.org/documentation/configuration.html -->

  <diskStore path="java.io.tmpdir/vortikal/ehcache" />

  <defaultCache
    maxElementsInMemory="100"
    maxElementsOnDisk="10000"
    eternal="false"
    overflowToDisk="true"
    timeToIdleSeconds="120"
    timeToLiveSeconds="120" />

  <!-- MULTI HOST INDEX SEARCH CACHE -->
  <cache name="org.vortikal.MULTI_HOST_INDEX_SEARCH_CACHE"
         maxElementsInMemory="100"
         maxElementsOnDisk="10000"
         eternal="false"
         overflowToDisk="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="600" />

  <!-- LINK CHECK CACHE -->
  <cache name="org.vortikal.LINK_CHECK_CACHE"
         maxElementsInMemory="500"
         maxElementsOnDisk="1000000"
         eternal="false"
         overflowToDisk="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="86400" />

</ehcache>