<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

  <!-- See http://ehcache.org/documentation/configuration.html -->

  <diskStore path="user.home/vortikal/cache" />

  <defaultCache
    maxElementsInMemory="100"
    maxElementsOnDisk="10000"
    eternal="false"
    overflowToDisk="true"
    timeToIdleSeconds="120"
    timeToLiveSeconds="120" />

  <!-- LINK CHECK CACHE -->
  <cache name="org.vortikal.LINK_CHECK_CACHE"
         maxElementsInMemory="500"
         maxElementsOnDisk="1000000"
         eternal="false"
         overflowToDisk="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="86400" />

  <!-- URCHIN CACHE -->
  <cache name="org.vortikal.URCHIN_CACHE"
         maxElementsInMemory="100"
         maxElementsOnDisk="1000000"
         diskPersistent="true"
         eternal="false"
         overflowToDisk="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="2628000" />

</ehcache>