<Styles>

	<!-- Block Styles -->

	<!--
	# These styles are already available in the "Format" combo, so they are not
	# needed here by default.

	<Style name="Heading 1" element="h1" />
	<Style name="Heading 2" element="h2" />
	<Style name="Heading 3" element="h3" />
	<Style name="Heading 4" element="h4" />
	<Style name="Heading 5" element="h5" />
	<Style name="Heading 6" element="h6" />
	<Style name="Paragraph" element="p" />
	<Style name="Document Block" element="div" />
	<Style name="Preformatted Text" element="pre" />
	<Style name="Address" element="address" />
	-->

	<!-- Inline Styles -->

        <Style name="Facts container left" element="div">
                <Attribute name="class" value="facts-container container-size-s container-left" />
        </Style>
        <Style name="Facts container right" element="div">
                <Attribute name="class" value="facts-container container-size-s container-right" />
        </Style>

        <Style name="Image container left" element="div">
                <Attribute name="class" value="img-container container-left" />
        </Style>
        <Style name="Image container middle" element="div">
                <Attribute name="class" value="img-container container-middle" />
        </Style>
        <Style name="Image container right" element="div">
                <Attribute name="class" value="img-container container-right" />
        </Style>

       <Style name="Image and caption container left (400px)" element="div">
                <Attribute name="class" value="container container-size-s container-left" />
        </Style>
        <Style name="Image and caption container left (300px)" element="div">
                <Attribute name="class" value="container container-size-xs container-left" />
        </Style>
        <Style name="Image and caption container left (200px)" element="div">
                <Attribute name="class" value="container container-size-xxs container-left" />
        </Style>

        <Style name="Image and caption container middle (800px)" element="div">
                <Attribute name="class" value="container container-size-xxl container-middle" />
        </Style>
        <Style name="Image and caption container middle (700px)" element="div">
                <Attribute name="class" value="container container-size-xl container-middle" />
        </Style>
        <Style name="Image and caption container middle (600px)" element="div">
                <Attribute name="class" value="container container-size-l container-middle" />
        </Style>
       <Style name="Image and caption container middle (500px)" element="div">
                <Attribute name="class" value="container container-size-m container-middle" />
        </Style>
        <Style name="Image and caption container middle (400px)" element="div">
                <Attribute name="class" value="container container-size-s container-middle" />
        </Style>
        <Style name="Image and caption container middle (300px)" element="div">
                <Attribute name="class" value="container container-size-xs container-middle" />
        </Style>
        <Style name="Image and caption container middle (200px)" element="div">
                <Attribute name="class" value="container container-size-xxs container-middle" />
        </Style>

        <Style name="Image and caption container right (400px)" element="div">
                <Attribute name="class" value="container container-size-s container-right" />
        </Style>
        <Style name="Image and caption container right (300px)" element="div">
                <Attribute name="class" value="container container-size-xs container-right" />
        </Style>
                <Style name="Image and caption container right (200px)" element="div">
                <Attribute name="class" value="container container-size-xxs container-right" />
        </Style>



	<!--
	# These are core styles available as toolbar buttons.

	<Style name="Bold" element="b">
		<Override element="strong" />
	</Style>
	<Style name="Italic" element="i">
		<Override element="em" />
	</Style>
	<Style name="Underline" element="u" />
	<Style name="Strikethrough" element="strike" />
	<Style name="Subscript" element="sub" />
	<Style name="Superscript" element="sup" />
	-->

	<Style name="Marker: Yellow" element="span">
		<Style name="background-color" value="Yellow" />
	</Style>
	<Style name="Marker: Green" element="span">
		<Style name="background-color" value="Lime" />
	</Style>

	<Style name="Big" element="big" />
	<Style name="Small" element="small" />
	<Style name="Typewriter" element="tt" />

	<Style name="Computer Code" element="code" />
	<Style name="Keyboard Phrase" element="kbd" />
	<Style name="Sample Text" element="samp" />
	<Style name="Variable" element="var" />

	<Style name="Deleted Text" element="del" />
	<Style name="Inserted Text" element="ins" />

	<Style name="Cited Work" element="cite" />
	<Style name="Inline Quotation" element="q" />

	<Style name="Language: RTL" element="span">
		<Attribute name="dir" value="rtl" />
	</Style>
	<Style name="Language: LTR" element="span">
		<Attribute name="dir" value="ltr" />
	</Style>
	<Style name="Language: RTL Strong" element="bdo">
		<Attribute name="dir" value="rtl" />
	</Style>
	<Style name="Language: LTR Strong" element="bdo">
		<Attribute name="dir" value="ltr" />
	</Style>

	<!-- Object Styles -->

	<Style name="Image on Left" element="img">
		<Attribute name="style" value="padding: 5px; margin-right: 5px" />
		<Attribute name="border" value="2" />
		<Attribute name="align" value="left" />
	</Style>
	<Style name="Image on Right" element="img">
		<Attribute name="style" value="padding: 5px; margin-left: 5px" />
		<Attribute name="border" value="2" />
		<Attribute name="align" value="right" />
	</Style>
</Styles>
