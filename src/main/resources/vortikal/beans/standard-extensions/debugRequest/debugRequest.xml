<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="debugRequestService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="webService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <bean class="org.vortikal.web.service.RequestParameterExistsAssertion">
          <property name="parameterName" ref="debugRequestIdentifyingParameter" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="debugRequestController" />
  </bean>

  <bean id="debugRequestIdentifyingParameter" class="java.lang.String">
    <constructor-arg value="debug-request" />
  </bean>

  <bean id="debugRequestController" class="org.vortikal.web.controller.DebugController">
    <property name="repository" ref="repository" />
    <property name="service" ref="viewService" />
    <property name="viewName" value="debugRequest" />
    <property name="modelName" value="responseInfo" />
    <property name="identifyingParameter" ref="debugRequestIdentifyingParameter" />
  </bean>

  
  <bean id="debugRequestViewResolver" class="org.vortikal.web.decorating.MappingViewResolver">
    <property name="views">
      <map>
        <entry key="debugRequest" value-ref="debugRequestView" />
      </map>
    </property>
  </bean>

  <bean id="debugRequestView" parent="freemarkerView">
    <property name="url" value="pages/response-info.ftl" />
  </bean>

</beans>
