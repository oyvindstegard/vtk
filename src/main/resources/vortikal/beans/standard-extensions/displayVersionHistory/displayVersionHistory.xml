<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
  "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  
  <bean id="displayVersionHistory" class="org.vortikal.web.service.ServiceImpl">
    <property name="order" value="-300"/>
    <property name="parent" ref="repositoryManageService"/>
    <property name="categories">
      <set>
        <value>rootMenu</value>
      </set>
    </property>
    <property name="attributes">
      <map>
        <entry key="tabOrder"><value type="java.lang.Integer">1000</value></entry>
      </map>
    </property>
    <property name="assertions">
      <list>
        <bean class="org.vortikal.web.service.RequestParameterAssertion">
          <property name="parameterName" value="mode"/>
          <property name="parameterValue" value="version-history"/>
        </bean>
      </list>
    </property>
    <property name="handler" ref="displayVersionHistoryHandler"/>

  </bean>


  <bean id="displayVersionHistoryHandler"
        class="org.springframework.web.servlet.mvc.ParameterizableViewController">
    <property name="viewName" value="displayVersionHistory" />
  </bean>

  <bean id="displayVersionHistoryViewResolver" parent="rootViewResolver">
    <property name="views">
      <map>
        <entry key="displayVersionHistory" value-ref="displayVersionHistoryView" />
      </map>
    </property>
  </bean>


  <bean id="displayVersionHistoryView" parent="freemarkerView">
    <property name="url" value="pages/version-history.ftl" />
    <property name="referenceDataProviders">
      <list>
        <ref bean="versionHistoryProvider" />
      </list>
    </property>
  </bean>


  <bean id="versionHistoryProvider"
        class="org.vortikal.web.referencedata.provider.XMLClassPathResourceProvider">
    <property name="path" value="/vortikal-changes/changes.xml" />
    <property name="modelName" value="changesXML" />
  </bean>

</beans>
