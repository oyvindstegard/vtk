<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="urchinResourceStats" class="org.vortikal.urchin.UrchinResourceStats">
    <property name="urchinUser" value="${urchinUser}" />
    <property name="urchinPassword" value="${urchinPassword}" />
    <property name="cacheManager" ref="ehCacheManager" />
    <property name="urchinHostsToProfile" ref="urchinHostsToProfile" />
    <property name="webHostName" value="${webHostName}" />
  </bean>

  <bean id="urchinResourceStats.retrieveService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="manageService" />
    <property name="order" value="-9999" />
    <property name="assertions">
      <list>
        <bean class="org.vortikal.web.service.RequestParameterAssertion">
          <property name="parameterName" value="view" />
          <property name="parameterValue" value="urchin-stats" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="urchinResourceStats.handler" />
  </bean>

  <bean id="urchinResourceStats.handler" class="org.vortikal.urchin.UrchinResourceStatsController">
    <property name="urchinResourceStats" ref="urchinResourceStats" />
    <property name="repository" ref="repository" />
    <property name="viewName" value="urchinResourceStats.view" />
  </bean>

  <bean id="urchinResourceStats.viewResolver" parent="viewResolver">
    <property name="views">
      <map>
        <entry key="urchinResourceStats.view" value-ref="urchinResourceStats.view" />
      </map>
    </property>
  </bean>

  <bean id="urchinResourceStats.view" parent="freemarkerView">
    <property name="url" value="pages/urchin-stats.ftl" />
    <property name="referenceDataProviders">
      <ref bean="resourceContextProvider" />
    </property>
    <property name="attributesMap">
      <map>
        <entry key="cssURLs">
          <list>
            <value>${themeBaseURL}/default.css</value>
            <value>${themeBaseURL}/urchin.css</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="urchinVisitReport" class="org.vortikal.web.actions.report.UrchinVisitReport" parent="reporter">
    <property name="name" value="urchinVisit" />
    <property name="viewName" value="urchinVisit" />
    <property name="user" value="${urchinUser}" />
    <property name="password" value="${urchinPassword}" />
    <property name="cacheManager" ref="ehCacheManager" />
    <property name="service" ref="aboutResourceService" />
    <property name="urchinHostsToProfile" ref="urchinHostsToProfile" />
    <property name="webHostName" value="${webHostName}" />
  </bean>

  <bean id="urchinSearchReport" class="org.vortikal.web.actions.report.UrchinSearchReport" parent="reporter">
    <property name="name" value="urchinSearch" />
    <property name="viewName" value="urchinSearch" />
    <property name="user" value="${urchinUser}" />
    <property name="password" value="${urchinPassword}" />
    <property name="cacheManager" ref="ehCacheManager" />
    <property name="urchinHostsToProfile" ref="urchinHostsToProfile" />
    <property name="webHostName" value="${webHostName}" />
  </bean>

  <bean id="urchinHostsToProfile" class="org.springframework.beans.factory.config.MapFactoryBean">
    <property name="sourceMap">
      <map>
        <entry key="www.uio.no" value="1" />
        <entry key="www.hf.uio.no" value="2" />
        <entry key="www.khm.uio.no" value="3" />
        <entry key="www.odont.uio.no" value="4" />
        <entry key="www.sv.uio.no" value="5" />
        <entry key="www.tf.uio.no" value="6" />
        <entry key="www.ub.uio.no" value="7" />
        <entry key="www.uv.uio.no" value="8" />
        <entry key="www.jus.uio.no" value="10" />
        <entry key="www.uniforum.uio.no" value="11" />
        <entry key="www.mn.uio.no" value="14" />
        <entry key="www.med.uio.no" value="20" />
      </map>
    </property>
  </bean>

</beans>
