<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <!-- Periodic system jobs -->

  <!-- Abstract base bean for repository jobs -->
  <bean id="repository.systemjob" abstract="true" parent="repositoryAware">
    <property name="securityContext">
      <bean class="org.vortikal.security.SecurityContext">
        <constructor-arg ref="writeAllToken" />
        <constructor-arg ref="rootPrincipal" />
      </bean>
    </property>
    <property name="systemJobStatusPropDef" ref="systemJobStatusPropDef" />
    <property name="resourceTypeTree" ref="resourceTypeTree" />
  </bean>

  <!-- Abstract base bean for index-based repository job path selectors -->
  <bean id="repository.systemjob.indexPathSelector" abstract="true">
    <property name="searcher" ref="systemIndexSearcher" />
    <property name="parser" ref="searchParser" />
    <property name="resourceTypeTree" ref="resourceTypeTree" />
  </bean>
  
  <!-- Resource publisher periodic job -->
  <bean id="repository.systemjob.publisher" class="org.vortikal.repository.systemjob.InvokeStoreJob"
        parent="repository.systemjob">
    <property name="simplePeriodicTriggerExpression" value="${repository.publisher.interval}" />
    <property name="id" value="published-status" />
    <property name="pathSelector">
      <bean class="org.vortikal.repository.systemjob.ResourcePublishingPathSelector" 
            parent="repository.systemjob.indexPathSelector">
        <property name="publishedPropDef" ref="publishedPropDef" />
        <property name="publishDatePropDef" ref="publishDatePropDef" />
        <property name="unpublishDatePropDef" ref="unpublishDatePropDef" />
      </bean>
    </property>
    <property name="affectedPropDefPointers">
      <list>
        <value>json-resource::published</value>
      </list>
    </property>
  </bean>




  <!-- Broken link check job for recently modified resources -->

  <bean id="repository.systemjob.linkcheck.recent" class="org.vortikal.repository.systemjob.InvokeStoreJob"
        parent="repository.systemjob">
    <property name="simplePeriodicTriggerExpression" value="${systemjob.linkcheck.recent.trigger}" />
    <property name="enabled" value="${systemjob.linkcheck.enabled}"/>
    <property name="id" value="linkcheck-recent" />
    <property name="affectedPropDefPointers">
      <list>
        <value>resource::link-check</value>
        <value>resource::link-status</value>
      </list>
    </property>
    <property name="pathSelectors">
      <list>
        <bean class="org.vortikal.repository.systemjob.IndexQueryPathSelector"
              parent="repository.systemjob.indexPathSelector">
          <property name="queryString" value="link-status = AWAITING_LINKCHECK" />
          <property name="limit" value="${systemjob.linkcheck.batch}" />
          <property name="sorting">
            <bean class="org.vortikal.repository.search.SortingImpl">
              <constructor-arg>
                <list>
                  <bean class="org.vortikal.repository.search.PropertySortField">
                    <constructor-arg ref="lastModifiedPropDef" />
                    <constructor-arg value="ASC" />
                  </bean>
                </list>
              </constructor-arg>
            </bean>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <!-- Broken link check job (regular intervals) -->

  <bean id="repository.systemjob.linkcheck" class="org.vortikal.repository.systemjob.InvokeStoreJob"
        parent="repository.systemjob">
    <property name="simplePeriodicTriggerExpression" value="${systemjob.linkcheck.trigger}" />
    <property name="enabled" value="${systemjob.linkcheck.enabled}"/>
    <property name="id" value="linkcheck" />
    <property name="affectedPropDefPointers">
      <list>
        <value>resource::link-check</value>
        <value>resource::link-status</value>
      </list>
    </property>
    <property name="pathSelectors">
      <list>
        <bean class="org.vortikal.repository.systemjob.IndexQueryPathSelector" 
              parent="repository.systemjob.indexPathSelector">
          <property name="queryString" value="link-status !exists OR system-job-status@linkcheck &lt; {$currentTime-${systemjob.linkcheck.interval}|yyyyMMdd\ HH:mm:ss}" />
          <property name="limit" value="${systemjob.linkcheck.batch}" />
          <property name="sorting">
            <bean class="org.vortikal.repository.search.SortingImpl">
              <constructor-arg>
                <list>
                  <bean class="org.vortikal.repository.search.PropertySortField">
                    <constructor-arg ref="systemJobStatusPropDef" />
                    <constructor-arg value="ASC" />
                    <property name="complexValueAttributeSpecifier" value="linkcheck" />
                  </bean>
                </list>
              </constructor-arg>
            </bean>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  
</beans>
