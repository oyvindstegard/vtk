<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <!-- Periodic system jobs -->
  
  <!-- Resource publisher periodic job -->
  <bean id="repository.systemjob.publisher" class="org.vortikal.repository.systemjob.InvokeStoreJob"
        parent="repository.systemjob">
    <property name="simplePeriodicTriggerExpression" value="${repository.publisher.interval}" />
    <property name="id" value="published-status" />
    <property name="pathSelector">
      <bean class="org.vortikal.repository.systemjob.ResourcePublishingPathSelector" 
            parent="repository.systemjob.indexPathSelector">
        <property name="publishedPropDef" ref="publishedPropDef" />
        <property name="publishDatePropDef" ref="publishDatePropDef" />
        <property name="unpublishDatePropDef" ref="unpublishDatePropDef" />
      </bean>
    </property>
    <property name="affectedPropDefPointers">
      <list>
        <value>json-resource::published</value>
      </list>
    </property>
  </bean>

  <!-- Broken link check job -->
  <bean id="repository.systemjob.linkcheck" class="org.vortikal.repository.systemjob.InvokeStoreJob"
        parent="repository.systemjob">
    <property name="simplePeriodicTriggerExpression" value="60" />
    <property name="enabled" value="true"/>
    <property name="id" value="linkcheck" />
    <property name="affectedPropDefPointers">
      <list>
        <value>resource::link-check</value>
        <value>resource::link-status</value>
      </list>
    </property>
    <property name="pathSelector">
      <bean class="org.vortikal.repository.systemjob.IndexQueryPathSelector" 
            parent="repository.systemjob.indexPathSelector">
        <property name="queryString" value="links exists AND link-status !exists" />
      </bean>
    </property>
  </bean>
  
</beans>
