<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <!-- Automatic publishing -->
  <bean id="repository.publisher" parent="repository.systemJobMethodInvokingTrigger">
    <property name="targetObject" ref="repository.resourcePublisher" />
    <property name="triggerThreadName" value="${repositoryID}.publisher" />
    <property name="repeatInterval" value="${repository.publisher.interval}" />
  </bean>

  <bean id="repository.resourcePublisher" class="org.vortikal.repository.systemjob.publishing.ResourcePublisher"
    parent="repository.systemJob">
    <property name="systemJobName" value="published-status" />
    <property name="publishedPropDef" ref="publishedPropDef" />
    <property name="publishDatePropDef" ref="publishDatePropDef" />
    <property name="unpublishDatePropDef" ref="unpublishDatePropDef" />
    <property name="affectedPropDefPointers">
      <list>
        <value>json-resource::published</value>
      </list>
    </property>
  </bean>

  <!-- Broken links (system job is disabled for now) -->
  <!--
  <bean id="repository.brokenLinksEvaluateTrigger" parent="repository.systemJobMethodInvokingTrigger">
    <property name="targetObject" ref="repository.linkCheckSystemJob" />
    <property name="triggerThreadName" value="${repositoryID}.linkCheck" />
    <property name="repeatInterval" value="${repository.publisher.interval}" />
  </bean>
  -->
  
  <bean id="repository.linkCheckSystemJob" class="org.vortikal.repository.systemjob.LinkCheckSystemJob"
        parent="repository.systemJob">

    <property name="systemJobName" value="linkcheck" />
    <property name="parser" ref="searchParser" />

    <!-- XXX: ideally, this query would select resources
        that contain links that have not been checked for
        a while, or that are in the middle of being
        link checked
    -->
    <property name="query" value="uri=/nilshtml.html" />

    <property name="affectedPropDefPointers">
      <list>
        <value>resource::link-status</value>
      </list>
    </property>
  </bean>


</beans>
