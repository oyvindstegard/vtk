<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <!-- Automatic publishing -->
  <bean id="repository.publisher" parent="repository.systemJobMethodInvokingTrigger">
    <property name="targetObject" ref="repository.resourcePublisher" />
    <property name="triggerThreadName" value="${repositoryID}.publisher" />
    <property name="repeatInterval" value="${repository.publisher.interval}" />
  </bean>

  <bean id="repository.resourcePublisher" class="org.vortikal.repository.systemjob.publishing.ResourcePublisher"
    parent="repository.systemJob">
    <property name="systemJobName" value="published-status" />
    <property name="publishedPropDef" ref="publishedPropDef" />
    <property name="publishDatePropDef" ref="publishDatePropDef" />
    <property name="unpublishDatePropDef" ref="unpublishDatePropDef" />
    <property name="affectedProperties">
      <list>
        <ref bean="overriddenPublishedPropDef" />
      </list>
    </property>
  </bean>

</beans>