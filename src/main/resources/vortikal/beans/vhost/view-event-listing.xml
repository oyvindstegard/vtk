<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean id="eventListing.viewService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsEventListing" />
      </list>
    </property>
    <property name="handlerInterceptors">
      <list>
        <ref bean="noCacheViewHandlerInterceptor" />
      </list>
    </property>
    <property name="handler" ref="eventListing.handler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>
  
  <bean id="eventListing.atomService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.atomService" />
    <property name="order" value="-2" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsEventListing" />
      </list>
    </property>
    <property name="handler" ref="eventListing.atomHandler" />
  </bean>
  

  <bean id="eventListing.handler" 
        class="org.vortikal.web.controller.EventListingController"
        parent="requestLocalRepositoryAware">
    <property name="collectionSearcher" ref="systemIndexSearcher" />
    <property name="resourceManager" ref="resourceManager" />
    <property name="sortPropDefs">
      <list>
        <ref bean="importancePropDef" />
        <ref bean="navigationTitlePropDef" />
        <ref bean="titlePropDef" />
      </list>
    </property>
    <property name="overridingSortPropDefs">
      <map>
        <entry key-ref="navigationTitlePropDef">
          <list>
            <ref bean="titlePropDef" />
          </list>
        </entry>
      </map>
    </property>
    <property name="hiddenPropDef" ref="hiddenPropDef" />
    <property name="viewName" value="eventListing.view" />
    <property name="pageLimitPropDef" ref="collection.pageLimitPropDef" />
    <property name="hideNumberOfComments" ref="collection.hideNumberOfComments" />
    <property name="defaultPageLimit" value="${collectionListing.defaultPageLimit}" />
    <property name="upcomingEventsSearch" ref="eventListing.upcomingEventsSearchComponent" />
    <property name="previousEventsSearch" ref="eventListing.previousEventsSearchComponent" />
    <property name="alternativeRepresentations">
      <map>
        <entry key="application/atom+xml" value-ref="eventListing.atomService" />
      </map>
    </property>
  </bean>

  <bean id="eventListing.atomHandler" 
    class="org.vortikal.web.controller.feed.CollectionListingAsAtomFeed"
    parent="requestLocalRepositoryAware">
    <property name="viewService" ref="viewService" />
    <property name="abdera" ref="abdera" />
    <property name="searchComponent" ref="eventListing.upcomingEventsSearchComponent" />
    <property name="publishedDatePropDef" ref="startDatePropDef" />
  </bean>

  <bean id="eventListing.upcomingEventsSearchComponent" 
        class="org.vortikal.web.search.QueryStringSearchComponent">
    <property name="name" value="eventListing.upcomingEventsSearchComponent" />
    <property name="titleLocalizationKey" value="eventListing.upcomingEvents" />
    <property name="viewService" ref="webService" />
    <property name="searcher" ref="systemIndexSearcher" />
    <property name="resourceManager" ref="resourceManager" />
    <property name="defaultRecursive" value="true" />
    <property name="recursivePropDef" ref="eventListing.recursiveListingPropDef" />

    <property name="query">
      <value>(uri = {$currentFolder}/* AND type IN event) AND (start-date &gt; {$currentDate} OR end-date &gt; {$currentDate}) </value>
    </property>
    <property name="queryParser" ref="searchParser" />

    <property name="defaultSortPropDef" ref="startDatePropDef" />
    <property name="defaultSortOrder" ref="SORT_ORDER.ASC" />
    <property name="listableProperties" ref="eventListing.listableProperties" />

  </bean>


  <bean id="eventListing.previousEventsSearchComponent" 
        class="org.vortikal.web.search.QueryStringSearchComponent">
    <property name="name" value="eventListing.previousEventsSearchComponent" />
    <property name="titleLocalizationKey" value="eventListing.previousEvents" />
    <property name="viewService" ref="webService" />
    <property name="searcher" ref="systemIndexSearcher" />
    <property name="resourceManager" ref="resourceManager" />
    <property name="defaultRecursive" value="true" />
    <property name="recursivePropDef" ref="eventListing.recursiveListingPropDef" />

    <property name="query">
      <value>(uri = {$currentFolder}/* AND type IN event) AND (end-date &lt; {$currentDate} OR (end-date not exists AND start-date &lt; {$currentDate}))</value>
    </property>
    <property name="queryParser" ref="searchParser" />

    <property name="defaultSortPropDef" ref="startDatePropDef" />
    <property name="defaultSortOrder" ref="SORT_ORDER.DESC" />
    <property name="listableProperties" ref="eventListing.listableProperties" />
  </bean>


  <bean id="eventListing.listableProperties" class="java.util.ArrayList">
    <constructor-arg>
      <list>
          <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="startDatePropDef" />
        </bean>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="endDatePropDef" />
          <property name="preventDisplayProperty" ref="eventListing.hideEndDatePropDef" />
        </bean>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="locationPropDef" />
          <property name="preventDisplayProperty" ref="eventListing.hideLocationPropDef" />
        </bean>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="introductionImagePropDef" />
          <property name="preventDisplayProperty" ref="articleListing.hideIntroductionImagePropDef" />
        </bean>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="introductionPropDef" />
          <property name="preventDisplayProperty" ref="articleListing.hideIntroductionPropDef" />
        </bean>
      </list>
    </constructor-arg>
  </bean>



  <bean id="eventListing.viewResolver" parent="decoratorViewResolver">
    <property name="views">
      <map>
        <entry key="eventListing.view"  value-ref="eventListing.view" />
      </map>
    </property>
  </bean>

  <bean id="eventListing.view" parent="freemarkerView">
    <property name="url" value="pages/view-collectionlisting.ftl" />
    <property name="referenceDataProviders">
      <list>
        <ref bean="resourceContextProvider" />
      </list>
    </property>
    <property name="attributesMap">
      <map>
        <entry key="cssURLs">
          <list>
            <value>${themeBaseURL}/view-collectionlisting.css</value>
          </list>
        </entry>
         <entry key="printCssURLs">
          <list>
            <value>${themeBaseURL}/view-collectionlisting-print.css</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>


</beans>
