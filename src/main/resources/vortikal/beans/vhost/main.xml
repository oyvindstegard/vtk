  <import resource="common/html-util.xml" />
  <import resource="common/security.xml" />
  <import resource="common/vortikal.xml" />

  <!-- Generalized service on the backend, available to the web layer -->
  <import resource="service/service.xml" />

  <import resource="query.xml" />
  <import resource="reporting.xml" />
  <import resource="resource-types/main.xml" />
  <import resource="actions.xml" />
  <import resource="repository.xml" />
  <import resource="changelog.xml" />
  <import resource="schema-registry.xml" />
  <import resource="template-lang.xml" />
  <import resource="view.xml" />
  <import resource="decorating.xml" />
  <import resource="decorator-components.xml" />
  <import resource="system-decorating.xml" />
  <import resource="controllers.xml" />
  <import resource="service.xml" />
  <import resource="authentication.xml" />
  <import resource="article.xml" />
  <import resource="structured-resources-management.xml" />
  <import resource="structured-resources.xml" />
  <import resource="view-feed-listing.xml" />
  <import resource="view-collection-listing.xml" />
  <import resource="view-article-listing.xml" />
  <import resource="view-event-listing.xml" />
  <import resource="view-event-calendar-listing.xml"/>
  <import resource="view-blog-listing.xml" />
  <import resource="view-person-listing.xml" />
  <import resource="view-project-listing.xml" />
  <import resource="view-research-group-listing.xml" />
  
  <import resource="view-image-listing.xml" />
  
  <!-- Beans to override default listing of events and articles -->
  <import resource="view-structured-article-listing.xml" />
  <import resource="view-structured-event-listing.xml" />
  
  <import resource="manage.xml" />
  <import resource="report.xml"/>
  <import resource="commenting.xml" />
  <import resource="root-management.xml" />
  <import resource="browse.xml" />
  <import resource="webdav.xml" />
  <import resource="source.xml" />
