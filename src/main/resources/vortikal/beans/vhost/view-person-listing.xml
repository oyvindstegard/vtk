<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="personListing.viewService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsPersonListing" />
      </list>
    </property>
    <property name="handlerInterceptors">
      <list>
        <ref bean="noCacheViewHandlerInterceptor" />
      </list>
    </property>
    <property name="handler" ref="personListing.handler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="personListing.handler" class="org.vortikal.web.display.collection.CollectionListingController"
    parent="collectionListing.handler">
    <property name="searchComponents">
      <list>
        <ref bean="personListing.searchComponent" />
      </list>
    </property>
    <property name="viewName" value="personListing.view" />
  </bean>

  <bean id="personListing.searchComponent" parent="collectionListing.searchComponent">
    <property name="name" value="personListing.defaultPerson" />
    <property name="defaultRecursive" value="true" />
    <property name="query">
      <value>(uri = {$currentFolder}/*) AND (type IN person)</value>
    </property>
  </bean>

  <bean id="personListing.viewResolver" parent="decoratorViewResolver">
    <property name="views">
      <map>
        <entry key="personListing.view" value-ref="personListing.view" />
      </map>
    </property>
  </bean>

  <bean id="personListing.view" parent="collectionListing.view">
    <property name="attributesMap">
      <map>
        <entry key="cssURLs">
          <list>
            <value>${themeBaseURL}/view-collectionlisting.css</value>
            <value>${themeBaseURL}/view-person-listing.css</value>
          </list>
        </entry>
        <entry key="printCssURLs">
          <list>
            <value>${themeBaseURL}/view-collectionlisting-print.css</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="personListing.feedService" parent="collectionListing.atomService">
    <property name="order" value="-2" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsPersonListing" />
        <ref bean="feedParameterSetAssertion" />
      </list>
    </property>
    <property name="handler" ref="personListing.feedHandler" />
  </bean>

  <bean id="personListing.feedHandler" parent="collectionListing.atomHandler">
    <property name="searchComponent" ref="personListing.searchComponent" />
  </bean>

</beans>