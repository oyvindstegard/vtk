<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <!-- Manager for all periodic tasks (beans of type org.vortikal.scheduling.Task) -->
  <bean id="scheduling.taskManager" class="org.vortikal.scheduling.TaskManager">
    <property name="taskScheduler">
      <bean class="org.springframework.scheduling.concurrent.ThreadPoolTaskScheduler">
        <property name="poolSize" value="4"/>
        <property name="threadNamePrefix" value="${repositoryID}.task-manager-"/>
      </bean>
    </property>
  </bean>
  
</beans>