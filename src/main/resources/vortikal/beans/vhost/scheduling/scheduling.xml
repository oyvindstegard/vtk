<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean id="scheduling.taskManager"
        class="org.vortikal.scheduling.TaskManager">
    <property name="taskScheduler">
      <bean class="org.springframework.scheduling.concurrent.ThreadPoolTaskScheduler">
        <property name="poolSize" value="5"/>
        <property name="threadNamePrefix" value="task-manager-"/>
      </bean>
    </property>
  </bean>
  
  <bean id="dummyTask" class="org.vortikal.scheduling.DummyTask">
    <property name="simplePeriodicTriggerExpression" value="3,0,true"/>
  </bean>

</beans>