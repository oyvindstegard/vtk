<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean id="windowsWebdavExplorerService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="webdavService" />
    <property name="order" value="-990" />

    <property name="categories">
      <set>
        <value>resourceMenu</value>
      </set>
    </property>
    <property name="attributes">
      <map>
        <entry key="resourceMenuOrder"><value type="java.lang.Integer">1000</value></entry>
      </map>
    </property>
    <property name="assertions">
      <list>
        <bean class="org.vortikal.web.service.RequestMethodAssertion">
          <property name="method">
            <value>PROPFIND</value>
          </property>
        </bean>
        <ref bean="resourceInCollection" />
      </list>
    </property>
    <property name="handler" ref="webdavPropfindHandler" />
  </bean>

</beans>
