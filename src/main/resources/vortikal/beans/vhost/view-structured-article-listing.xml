<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="structured.articleListing.searchComponent" parent="articleListing.searchComponent">
    <property name="name" value="structured.articleListing.defaultArticles" />
    <property name="queryBuilders">
      <list>
        <ref bean="articleListing.listingUriQueryBuilder" />
        <ref bean="structured.articleListing.defaultQueryBuilder" />
      </list>
    </property>
    <property name="searchSorting" ref="structured.articleListing.searchSorting" />
    <property name="configurablePropertySelectPointers" ref="article.configurablePropertySelectPointersList" />
  </bean>

  <bean id="structured.articleListing.searchSorting" parent="articleListing.searchSorting">
    <property name="sortOrderPropDefPointers">
      <list>
        <value>publish-date</value>
      </list>
    </property>
  </bean>
  
  <!-- Fetch specifically specified articles, aka 'featured articles' -->
  <bean id="structured.articleListing.featuredArticlesSearchComponent" parent="articleListing.featuredArticlesSearchComponent">
    <property name="name" value="structured.articleListing.featuredArticles" />
    <property name="queryBuilders">
      <list>
        <ref bean="structured.articleListing.featuredArticlesQueryBuilder" />
      </list>
    </property>
    <property name="searchSorting" ref="structured.articleListing.searchSorting" />
    <property name="configurablePropertySelectPointers" ref="article.configurablePropertySelectPointersList" />
  </bean>

  <bean id="structured.articleListing.defaultQueryBuilder" parent="articleListing.defaultQueryBuilder">
    <property name="resourceType" value="structured-article" />
  </bean>

  <bean id="structured.articleListing.featuredArticlesQueryBuilder" parent="structured.articleListing.defaultQueryBuilder">
    <property name="invert" value="true" />
  </bean>

  <bean id="structured.articleListing.view" parent="freemarkerView">
    <property name="url" value="pages/view-collection-listing.ftl" />
    <property name="referenceDataProviders">
      <list>
        <ref bean="resourceContextProvider" />
      </list>
    </property>
  </bean>

  <bean id="article.configurablePropertySelectPointersList" class="java.util.ArrayList">
    <constructor-arg>
        <list>
          <value>title</value>
          <value>publish-date</value>
          <value>resource:picture</value>
          <value>resource:caption</value>
          <value>resource:introduction</value>
          <value>resource:hasBodyContent</value>
          <value>numberOfComments</value>
          <value>lastModified</value>
          <value>resource:media</value>
        </list>
    </constructor-arg>
  </bean>

</beans>