<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean id="articleListing.viewService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsArticleListing" />
      </list>
    </property>
    <property name="handlerInterceptors">
      <list>
        <ref bean="noCacheViewHandlerInterceptor" />
      </list>
    </property>
    <property name="handler" ref="articleListing.handler" />
  </bean>
  
  
  <bean id="articleListing.handler" 
        class="org.vortikal.web.controller.CollectionListingController"
        parent="requestLocalRepositoryAware">
    <property name="resourceManager" ref="resourceManager" />
    <property name="viewName" value="articleListing.view" />
    <property name="searchComponents">
      <list>
        <ref bean="articleListing.searchComponent" />
      </list>
    </property>
  </bean>

  <bean id="articleListing.searchComponent" 
        class="org.vortikal.web.controller.search.SearchComponent">
    <property name="name" value="articleListing.searchComponent" />
    <property name="viewService" ref="webService" />
    <property name="searcher" ref="systemIndexSearcher" />
    <property name="resourceManager" ref="resourceManager" />
    <property name="pageLimitPropDef" ref="collection.pageLimitPropDef" />
    <property name="defaultRecursive" value="true" />
    <property name="recursivePropDef" ref="articleListing.recursiveListingPropDef" />
    <property name="sortPropDef" ref="articleListing.sortingPropDef" />

    <property name="query">
      <value>uri = {$currentFolder}/* AND type IN article AND published-date &lt;= {$currentDate}</value>
    </property>
    <property name="queryParser" ref="searchParser" />

    <property name="defaultSortPropDef" ref="publishedDatePropDef" />
    <property name="defaultSortOrder" ref="SORT_ORDER.DESC" />

    <property name="sortPropertyMapping">
      <map>
        <entry key="title" value-ref="titlePropDef" />
      </map>
    </property>

    <property name="sortOrderMapping">
      <map>
        <entry key="publishedDate" value-ref="SORT_ORDER.DESC" />
        <entry key="title" value-ref="SORT_ORDER.ASC" />
      </map>
    </property>

    <property name="listableProperties">
      <list>
        <bean class="org.vortikal.web.controller.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="introductionImagePropDef" />
          <property name="preventDisplayProperty" ref="articleListing.hideIntroductionImagePropDef" />
        </bean>
        <bean class="org.vortikal.web.controller.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="publishedDatePropDef" />
          <property name="preventDisplayProperty" ref="articleListing.hidePublishedDatePropDef" />
        </bean>
        <bean class="org.vortikal.web.controller.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="introductionPropDef" />
          <property name="preventDisplayProperty" ref="articleListing.hideIntroductionPropDef" />
        </bean>
      </list>
    </property>

  </bean>



  <bean id="articleListing.viewResolver" parent="decoratorViewResolver">
    <property name="views">
      <map>
        <entry key="articleListing.view"  value-ref="articleListing.view" />
      </map>
    </property>
  </bean>

  <bean id="articleListing.view" parent="freemarkerView">
    <property name="url" value="pages/view-collectionlisting.ftl" />
    <property name="referenceDataProviders">
      <list>
        <ref bean="resourceContextProvider" />
        <!--ref bean="viewCollectionListingProvider" /-->
        <ref bean="collectionListingFeedURLProvider" />
      </list>
    </property>
    <property name="attributesMap">
      <map>
        <entry key="cssURLs">
          <list>
            <value>${themeBaseURL}/view-collectionlisting.css</value>
          </list>
        </entry>
        <entry key="searchComponents">
          <list>
            <ref bean="articleListing.searchComponent" />
          </list>
        </entry>
      </map>
    </property>
  </bean>


</beans>

