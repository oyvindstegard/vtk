<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean id="deleteResourcesService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="manageCollectionListingService" />
    <property name="order" value="-1001" />
    <property name="categories">
      <set>
        <value>collectionMenu</value>
      </set>
    </property>
    <property name="assertions">
      <list>
        <ref bean="manage.postRequestAssertion" />
        <bean class="org.vortikal.web.service.RequestParameterAssertion">
          <property name="parameterName" value="action" />
          <property name="parameterValue" value="delete-resources" />
        </bean>
        <ref bean="writePermissionAssertion" />
        <ref bean="resourceInCollection" />
      </list>
    </property>
    <property name="handler" ref="deleteResourcesHandler" />
  </bean>
  
  <bean id="deleteResourceService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="manageService" />
    <property name="order" value="-997" />
    <property name="categories">
      <set>
        <value>resourceMenuLeft</value>
      </set>
    </property>
    <property name="attributes">
      <map>
        <entry key="resourceMenuLeftOrder">
          <value type="java.lang.Integer">999</value>
        </entry>
      </map>
    </property>
    <property name="assertions">
      <list>
        <bean class="org.vortikal.web.service.RequestParameterAssertion">
          <property name="parameterName" value="action" />
          <property name="parameterValue" value="delete-resource" />
        </bean>
        <ref bean="resourceNotRootAssertion" />
        <ref bean="deleteResourcePermissionAssertion" />
      </list>
    </property>
    <property name="handler" ref="deleteResourceHandler" />
  </bean>
  
  <bean id="deleteResourceHandler" class="org.vortikal.web.actions.delete.DeleteResourceController">
    <property name="formView" value="admin" />
    <property name="successView" value="redirectToManage" />
    <property name="cancelView" value="redirectToManage" />
    <property name="commandClass" value="org.vortikal.web.actions.delete.DeleteCommand" />
    <property name="deleteHelper" ref="deleteHelper" />
  </bean>
  
  <bean id="deleteResourcesHandler" class="org.vortikal.web.actions.delete.DeleteResourcesController">
    <property name="viewName" value="manageCollectionListing" />
    <property name="deleteHelper" ref="deleteHelper" />
  </bean>
  
  <bean id="deleteHelper" class="org.vortikal.web.actions.delete.DeleteHelper" />

</beans>
