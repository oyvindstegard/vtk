<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean id="staticResourceService" class="org.vortikal.web.service.ServiceImpl">
    <property name="order" value="-97000" />

    <property name="assertions">
      <list>
        <bean class="org.vortikal.web.service.RequestURIRegexpAssertion">
          <property name="pattern" value="^${cssBaseURL}/.*" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="defaultClassPathResourceHandler" />
  </bean>

  <bean id="defaultClassPathResourceHandler"
        class="org.vortikal.web.controller.DisplayClassPathResourceController">
    <property name="uriPrefix" value="${cssBaseURL}" />
    <property name="basePath" value="/vortikal/resources/default-theme" />
    <property name="expiresSeconds" value="${staticResourcesCacheSeconds}" />
  </bean>

</beans>
