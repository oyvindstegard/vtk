  <!-- ### LINK CHECK CACHE ### -->
  <cache name="org.vortikal.LINK_CHECK_CACHE" maxElementsInMemory="50" eternal="false" overflowToDisk="true"
    timeToIdleSeconds="0" timeToLiveSeconds="86400" />

</ehcache>