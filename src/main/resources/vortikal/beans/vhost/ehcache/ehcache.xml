<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

  <!-- XXX must filter property to proper value -->
  <diskStore path="${repository.tempDir}" />

  <!-- Set as jvm argument, e.g. -Dehcache.disk.store.dir=/path/to/dir -->
  <!--diskStore path="ehcache.disk.store.dir" /-->

  <defaultCache maxElementsInMemory="10" eternal="false" timeToIdleSeconds="120"
