<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean id="isUnpublishedCollectionAssertion" class="org.vortikal.web.service.ResourcePropertyAssertion">
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="name" value="obsoleted" />
    <property name="checkExistenceOnly" value="true" />
  </bean>

  <bean id="displayUnpublishedCollectionMessageService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="structuredResources.displayService" />
    <property name="order" value="-2" />
    <property name="assertions">
      <list>
        <ref bean="isUnpublishedCollectionAssertion" />
      </list>
    </property>
    <property name="handler" ref="displayUnpublishedCollectionPageHandler" />
    <property name="attributes">
      <map>
        <entry key="decorating.servicePredicateName" value="view-obsoleted" />
      </map>
    </property>
  </bean>

  <bean id="displayUnpublishedCollectionCollectionMessageService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.viewService" />
    <property name="order" value="-3" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsCollection" />
        <ref bean="isUnpublishedCollectionAssertion" />
      </list>
    </property>
    <property name="handler" ref="displayUnpublishedCollectionPageHandler" />
    <property name="attributes">
      <map>
        <entry key="decorating.servicePredicateName" value="view-obsoleted" />
      </map>
    </property>
  </bean>

  <bean id="displayUnpublishedCollectionPageHandler" class="org.vortikal.web.display.file.DisplayResourceController">
    <property name="viewName" value="displayUnpublishedCollectionMessage.view" />
  </bean>

  <bean id="displayUnpublishedCollectionMessage.viewResolver" parent="decoratorViewResolver">
    <property name="views">
      <map>
        <entry key="displayUnpublishedCollectionMessage.view" value-ref="displayUnpublishedCollectionMessage.view" />
      </map>
    </property>
  </bean>

  <bean id="displayUnpublishedCollectionMessage.view" parent="freemarkerView">
    <property name="url" value="pages/obsoleted-view.ftl" />
    <property name="referenceDataProviders">
      <list>
        <ref bean="resourceContextProvider" />
        <bean class="org.vortikal.web.referencedata.provider.ResourceServiceURLProvider">
          <property name="service" ref="manageService" />
          <property name="modelName" value="manage" />
          <property name="matchAssertions" value="true" />
        </bean>
      </list>
    </property>
  </bean>

  <!-- ### view of obsoleted resources ### -->
  <bean id="viewUnpublishedCollectionResourceService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="structuredResources.displayService" />
    <property name="order" value="-3" />
    <property name="assertions">
      <list>
        <ref bean="viewUnpublishedCollectionResourceAssertion" />
      </list>
    </property>
  </bean>

  <bean id="viewUnpublishedCollectionCollectionService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.viewService" />
    <property name="order" value="-4" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsCollection" />
        <ref bean="viewUnpublishedCollectionResourceAssertion" />
      </list>
    </property>
  </bean>

  <bean id="viewUnpublishedCollectionAssertion" class="org.vortikal.web.service.RequestParameterAssertion">
    <property name="parameterName" value="vrtxPreviewUnpublishedCollection" />
    <property name="parameterValue" value="true" />
  </bean>

  <bean id="viewUnpublishedCollectionResourceAssertion" class="org.vortikal.web.service.AndAssertion">
    <property name="assertions">
      <list>
        <ref bean="viewUnpublishedCollectionAssertion" />
        <ref bean="requiresReadPermissionAssertion" />
        <ref bean="isUnpublishedCollectionAssertion" />
      </list>
    </property>
  </bean>

</beans>
