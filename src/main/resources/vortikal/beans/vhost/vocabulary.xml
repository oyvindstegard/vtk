<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
   
   <bean id="vocabularyHelpService" class="org.vortikal.web.service.ServiceImpl">
      <property name="parent" ref="manageService" />
      <property name="order" value="-600" />
      <property name="assertions">
            <bean class="org.vortikal.web.service.RequestParameterAssertion">
               <property name="parameterName" value="mode" />
               <property name="parameterValue" value="property-vocabulary" />
            </bean>
      </property>
      <property name="handler" ref="defaultVocabularyHandler" />
   </bean>
   
         
   <bean id="defaultVocabularyHandler" 
      class="org.vortikal.web.controller.properties.VocabularyResolvingController">
      <property name="viewName" value="vocabulary" />
      <property name="resourceTypeTree" ref="resourceTypeTree" />
   </bean>
   
      
   <bean id="vocabularyViewResolver" 
      class="org.vortikal.web.view.decorating.MappingViewResolver">
      <property name="views">
         <map>
            <entry key="vocabulary" value-ref="vocabularyView" />
         </map>
      </property>
   </bean>
   
   
  <bean id="vocabularyView" parent="freemarkerView">
      <property name="url" value="pages/vocabularyviewer.ftl" />
      <property name="attributesMap">
         <map>
            <entry key="jsURLs">
               <list>
                 <value>${yui.basePath}/build/yahoo-dom-event/yahoo-dom-event.js</value>
                 <value>${yui.basePath}/build/animation/animation.js</value>
                 <value>${yui.basePath}/build/yahoo/yahoo.js</value>
                 <value>${yui.basePath}/build/event/event.js</value>
                 <value>${yui.basePath}/build/treeview/treeview.js</value>

                 <value>${yui.basePath}/vocabulary.js</value>
               </list>
            </entry>
            <entry key="cssURLs">
               <list>
                 <value>${yui.basePath}/build/fonts/fonts-min.css</value>
                 <value>${yui.basePath}/build/treeview/assets/skins/sam/treeview.css</value>

                 <value>${yui.basePath}/vocabulary.css</value>
               </list>
            </entry>
         </map>
      </property>
 
 </bean>

  <bean id="vocabulary.messageSource"
        class="org.springframework.context.support.ResourceBundleMessageSource">
    <property name="basenames">
      <list>
        <value>vortikal.i18n.vocabulary</value>
      </list>
    </property>
  </bean>
  

</beans>
