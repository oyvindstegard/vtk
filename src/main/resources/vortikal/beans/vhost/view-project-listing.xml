<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="projectListing.viewService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsProjectListing" />
      </list>
    </property>
    <property name="handler" ref="projectListing.handler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="projectListing.viewCompletedProjectsService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.viewService" />
    <property name="order" value="-1" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsProjectListing" />
        <ref bean="projectListing.viewAllProjectsAssertion" />
      </list>
    </property>
    <property name="handler" ref="projectListing.viewAllProjectsHandler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="projectListing.viewAllProjectsAssertion" class="org.vortikal.web.service.RequestParameterAssertion">
    <property name="parameterName" value="view" />
    <property name="parameterValue" value="completed" />
  </bean>

  <bean id="projectListing.viewAllProjectsHandler" class="org.vortikal.web.display.collection.AlphabeticalCollectionListingController"
    parent="projectListing.handler">
    <property name="searchComponents">
      <list>
        <ref bean="projectListing.viewCompletedProjectsSearchComponent" />
      </list>
    </property>
  </bean>


  <bean id="projectListing.handler" class="org.vortikal.web.display.collection.AlphabeticalCollectionListingController" parent="collectionListing.handler">
    <property name="searchComponents">
      <list>
        <ref bean="projectListing.searchComponent" />
      </list>
    </property>
    <property name="viewName" value="projectListing.view" />
    <property name="titlePropDef" ref="titlePropDef" />
    <property name="displayTypePropDef" ref="projectListing.displayTypePropDef" />
  </bean>

  <bean id="projectListing.searchComponent" parent="collectionListing.searchComponent">
    <property name="name" value="projectListing.defaultListing" />
    <property name="defaultRecursive" value="true" />
    <property name="query">
      <value>(uri = {$currentFolder}/*) AND (type IN structured-project) AND (resource:status-ongoing = true)</value>
    </property>
  </bean>

  <bean id="projectListing.viewCompletedProjectsSearchComponent" parent="collectionListing.searchComponent">
    <property name="name" value="projectListing.defaultListing" />
    <property name="defaultRecursive" value="true" />
    <property name="query">
      <value>(uri = {$currentFolder}/*) AND (type IN structured-project) AND (resource:status-ongoing = false)</value>
    </property>
  </bean>

  <bean id="projectListing.viewResolver" parent="decoratorViewResolver">
    <property name="views">
      <map>
        <entry key="projectListing.view" value-ref="projectListing.view" />
      </map>
    </property>
  </bean>

  <bean id="projectListing.view" parent="freemarkerView">
    <property name="url" value="pages/view-collection-listing.ftl" />
    <property name="referenceDataProviders">
      <list>
        <ref bean="resourceContextProvider" />
        <ref bean="projectListingViewServiceURLProvider" />
      </list>
    </property>
  </bean>

  <bean id="projectListingViewServiceURLProvider" class="org.vortikal.web.referencedata.provider.ProjectListingViewServiceURLProvider"
    parent="repositoryAware">
    <property name="service" ref="projectListing.viewCompletedProjectsService" />
    <property name="viewAll" value="viewAllProjectsLink" />
    <property name="viewSubset" value="viewOngoingProjectsLink" />
  </bean>

  <bean id="projectListing.feedService" parent="collectionListing.atomService">
    <property name="order" value="-2" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsProjectListing" />
        <ref bean="feedParameterSetAssertion" />
      </list>
    </property>
    <property name="handler" ref="projectListing.feedHandler" />
  </bean>

  <bean id="projectListing.feedHandler" parent="collectionListing.atomHandler">
    <property name="searchComponent" ref="projectListing.searchComponent" />
  </bean>

</beans>
