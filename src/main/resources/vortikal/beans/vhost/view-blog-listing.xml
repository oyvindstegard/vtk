<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="blogListing.viewService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsBlogListing" />
      </list>
    </property>
    <property name="handlerInterceptors">
      <list>
        <ref bean="noCacheViewHandlerInterceptor" />
      </list>
    </property>
    <property name="handler" ref="blogListing.handler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="blogListing.handler" class="org.vortikal.web.display.collection.BlogListingController"
    parent="collectionListing.handler">
    <property name="searchComponents">
      <list>
        <ref bean="blogListing.searchComponent" />
      </list>
    </property>
    <property name="viewName" value="blogListing.view" />
    <property name="viewService" ref="viewService" />
    <property name="tagElementsProvider" ref="tags.tagElementsProvider" />
    <property name="commentingService" ref="commenting.resourceCommentsService" />
  </bean>

  <bean id="blogListing.searchComponent" parent="collectionListing.searchComponent">
    <property name="name" value="blogListing.defaultListing" />
    <property name="defaultRecursive" value="true" />
    <property name="query">
      <value>(uri = {$currentFolder}/*) AND (type IN structured-article) </value>
    </property>
      <property name="listableProperties">
      <list>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="introductionImagePropDef" />
          <property name="preventDisplayProperty" ref="articleListing.hideIntroductionImagePropDef" />
        </bean>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="publishedDatePropDef" />
          <property name="preventDisplayProperty" ref="articleListing.hidePublishedDatePropDef" />
        </bean>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="introductionPropDef" />
          <property name="preventDisplayProperty" ref="articleListing.hideIntroductionPropDef" />
        </bean>
      </list>
    </property>
    <property name="searchSorting" ref="articleListing.searchSorting" />
  </bean>

  <bean id="blogListing.viewResolver" parent="decoratorViewResolver">
    <property name="views">
      <map>
        <entry key="blogListing.view" value-ref="blogListing.view" />
      </map>
    </property>
  </bean>
  
  <bean id="blogListing.view" parent="freemarkerView">
  <property name="url" value="pages/view-collectionlisting.ftl" />
    <property name="referenceDataProviders">
      <list>
        <ref bean="resourceContextProvider" />
      </list>
    </property>
     <property name="attributesMap">
      <map>
        <entry key="cssURLs">
          <list>
            <value>${themeBaseURL}/view-components.css</value>
            <value>${themeBaseURL}/view-blog-listing.css</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="blogListing.feedService" parent="collectionListing.atomService">
    <property name="order" value="-2" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsBlogListing" />
        <ref bean="feedParameterSetAssertion" />
      </list>
    </property>
    <property name="handler" ref="blogListing.feedHandler" />
  </bean>

  <bean id="blogListing.feedHandler" parent="collectionListing.atomHandler">
    <property name="searchComponent" ref="blogListing.searchComponent" />
  </bean>

</beans>