<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="structured.eventListing.upcomingEventsSearchComponent" parent="eventListing.upcomingEventsSearchComponent">
    <property name="name" value="structured.eventListing.upcomingEventsSearchComponent" />
    <property name="query">
      <value>(uri = {$currentFolder}/* AND type IN structured-event) AND (resource:start-date &gt;= {$currentDate} OR resource:end-date &gt;= {$currentDate})</value>
    </property>
    <property name="searchSorting" ref="structured.eventListing.upcoming.searchSorting" />
  </bean>

  <bean id="structured.eventListing.upcoming.searchSorting" parent="eventListing.upcoming.searchSorting">
    <property name="sortOrderPropDefPointers">
      <list>
        <value>resource:start-date</value>
      </list>
    </property>
  </bean>

  <bean id="structured.eventListing.previousEventsSearchComponent" parent="eventListing.previousEventsSearchComponent" >
    <property name="name" value="structured.eventListing.previousEventsSearchComponent" />
    <property name="query">
      <value>(uri = {$currentFolder}/* AND type IN structured-event) AND (resource:end-date &lt; {$currentDate} OR (resource:end-date not exists AND resource:start-date &lt; {$currentDate}))</value>
    </property>
    <property name="searchSorting" ref="structured.eventListing.previous.searchSorting" />
  </bean>

  <bean id="structured.eventListing.previous.searchSorting" parent="eventListing.previous.searchSorting">
    <property name="sortOrderPropDefPointers">
      <list>
        <value>resource:start-date</value>
      </list>
    </property>
  </bean>

  <bean id="structured.eventListing.groupedByDayEventSearchQueryString" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>
        (uri = {$currentFolder}/* AND type IN structured-event) AND (resource:start-date &gt;= {$currentDate+[1]d} AND resource:start-date &lt; {$currentDate+[2]d})
      </value>
    </constructor-arg>
  </bean>

  <bean id="structured.eventListing.furtherUpcomingSearchString" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>
        (uri = {$currentFolder}/* AND type IN structured-event) AND (resource:start-date &gt;= {$currentDate+[1]d})
      </value>
    </constructor-arg>
  </bean>

  <bean id="structured.eventListing.specificDateEventSearchQueryString" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>
        (uri = {$currentFolder}/* AND type IN structured-event) AND (resource:start-date &gt;= [1] AND resource:start-date &lt; [2])
      </value>
    </constructor-arg>
  </bean>

  <bean id="structured.eventListing.view" parent="freemarkerView">
    <property name="url" value="pages/view-collection-listing.ftl" />
    <property name="referenceDataProviders">
      <list>
        <ref bean="resourceContextProvider" />
      </list>
    </property>
  </bean>

</beans>