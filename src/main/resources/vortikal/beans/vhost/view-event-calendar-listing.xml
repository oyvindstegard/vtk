<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <!-- ### Default service, grouped view ###-->

  <bean id="calendarEventListing.viewService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="eventListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsEventListing" />
        <bean class="org.vortikal.web.service.ResourcePropertyAssertion">
          <property name="namespace" ref="EVENT_LISTING_NAMESPACE" />
          <property name="name" value="display-type" />
          <property name="value" value="calendar" />
          <property name="checkExistenceOnly" value="false" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="eventListing.calendarHandler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="eventListing.calendarHandler" class="org.vortikal.web.display.collection.event.EventCalendarListingController" parent="eventListing.handler">
    <property name="viewName" value="eventListingCalendar.view" />
    <property name="helper" ref="eventListingHelper" />
    <property name="daysAhead" value="${event.listing.days.ahead}" />
  </bean>

  <!-- ### View specific date ###-->

  <bean id="calendarEventListing.viewSpecificDateService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="calendarEventListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsEventListing" />
        <bean class="org.vortikal.web.service.ResourcePropertyAssertion">
          <property name="namespace" ref="EVENT_LISTING_NAMESPACE" />
          <property name="name" value="display-type" />
          <property name="value" value="calendar" />
          <property name="checkExistenceOnly" value="false" />
        </bean>
        <bean class="org.vortikal.web.service.RequestParameterExistsAssertion">
          <property name="parameterName" value="date" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="eventListing.calendarSpecificDateHandler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="eventListing.calendarSpecificDateHandler" class="org.vortikal.web.display.collection.event.EventCalendarSpecificDateListingController"
    parent="eventListing.calendarHandler">
  </bean>
  
  <!-- ### View all upcoming and all previous ### -->

  <bean id="calendarEventListing.viewAllUpcomingService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="calendarEventListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsEventListing" />
        <bean class="org.vortikal.web.service.ResourcePropertyAssertion">
          <property name="namespace" ref="EVENT_LISTING_NAMESPACE" />
          <property name="name" value="display-type" />
          <property name="value" value="calendar" />
          <property name="checkExistenceOnly" value="false" />
        </bean>
        <bean parent="viewParameterEquals">
          <property name="parameterValue" value="allupcoming" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="eventListing.calendarAllUpcomingHandler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="calendarEventListing.viewAllPreviousService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="calendarEventListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsEventListing" />
        <bean class="org.vortikal.web.service.ResourcePropertyAssertion">
          <property name="namespace" ref="EVENT_LISTING_NAMESPACE" />
          <property name="name" value="display-type" />
          <property name="value" value="calendar" />
          <property name="checkExistenceOnly" value="false" />
        </bean>
        <bean parent="viewParameterEquals">
          <property name="parameterValue" value="allprevious" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="eventListing.calendarAllPreviousHandler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="eventListing.calendarAllPreviousHandler" class="org.vortikal.web.display.collection.event.EventCalendarAllPreviousListingController"
    parent="eventListing.calendarHandler">
  </bean>

  <bean id="eventListing.calendarAllUpcomingHandler" class="org.vortikal.web.display.collection.event.EventCalendarAllUpcomingListingController"
    parent="eventListing.calendarHandler">
  </bean>

  <bean id="viewParameterEquals" class="org.vortikal.web.service.RequestParameterAssertion" abstract="true">
    <property name="parameterName" value="view" />
  </bean>

  <bean id="eventListing.groupedByDayEventSearchComponent" parent="eventListing.upcomingEventsSearchComponent">
    <property name="name" value="eventListing.groupedByDayEventSearchComponent" />
    <property name="queryBuilders">
      <list>
        <bean parent="queryStringParser">
          <property name="queryString" value="type IN event" />
        </bean>
        <bean class="org.vortikal.web.search.ParameterizedQueryStringProcessor" parent="queryStringParser">
          <property name="replacements">
            <map>
              <entry key="[1]" value="${event.listing.days.ahead}" />
            </map>
          </property>
          <property name="queryString"
            value="(start-date &gt;= {$currentDate} AND start-date &lt; {$currentDate+[1]d})
            OR (end-date &gt;= {$currentDate} AND end-date &lt; {$currentDate+[1]d})
            OR (start-date &lt;= {$currentDate} AND end-date &gt;= {$currentDate+[1]d})" />
        </bean>
      </list>
    </property>
    <property name="titleLocalizationKey">
      <null />
    </property>
  </bean>

  <bean id="eventListing.furtherUpcomingSearchComponent" parent="eventListing.upcomingEventsSearchComponent">
    <property name="name" value="eventListing.furtherUpcomingSearchComponent" />
    <property name="queryBuilders">
      <list>
        <bean parent="queryStringParser">
          <property name="queryString" value="type IN event" />
        </bean>
        <bean class="org.vortikal.web.search.ParameterizedQueryStringProcessor" parent="queryStringParser">
          <property name="replacements">
            <map>
              <entry key="[1]" value="${event.listing.days.ahead}" />
            </map>
          </property>
          <property name="queryString" value="start-date &gt;= {$currentDate+[1]d}" />
        </bean>
      </list>
    </property>
    <property name="titleLocalizationKey">
      <null />
    </property>
  </bean>

  <bean id="eventListing.specificDateEventSearchComponent" parent="eventListing.upcomingEventsSearchComponent">
    <property name="name" value="eventListing.furtherUpcomingSearchComponent" />
    <property name="queryBuilders">
      <list>
        <bean parent="queryStringParser">
          <property name="queryString" value="type IN event" />
        </bean>
        <bean class="org.vortikal.web.search.eventlisting.DateAndSearchTypeQueryStringProcessor" parent="queryStringParser">
          <property name="helper" ref="eventListingHelper" />
          <property name="queryString"
            value="(start-date &gt;= [1] AND start-date &lt; [2])
            OR (end-date &gt;= [1] AND end-date &lt; [2])
            OR (start-date &lt;= [1] AND end-date &gt;= [2])" />
        </bean>
      </list>
    </property>
    <property name="titleLocalizationKey">
      <null />
    </property>
  </bean>

  <bean id="eventListing.currentMonthSearchComponent" parent="eventListing.specificDateEventSearchComponent">
    <property name="name" value="eventListing.currentMonthSearchComponent" />
    <property name="queryBuilders">
      <list>
        <bean parent="queryStringParser">
          <property name="queryString" value="type IN event" />
        </bean>
        <bean class="org.vortikal.web.search.eventlisting.CurrentMonthQueryStringProcessor" parent="queryStringParser">
          <property name="helper" ref="eventListingHelper" />
          <property name="queryString"
            value="(start-date &gt;= [1] AND start-date &lt; [2])
            OR (end-date &gt;= [1] AND end-date &lt; [2])
            OR (start-date &lt;= [1] AND end-date &gt;= [2])" />
        </bean>
      </list>
    </property>
  </bean>

  <bean id="eventListingCalendar.view" parent="freemarkerView">
    <property name="url" value="pages/view-collection-listing.ftl" />
    <property name="referenceDataProviders">
      <list>
        <ref bean="eventCalenderContentProvider" />
      </list>
    </property>
    <property name="attributesMap">
      <map>
        <entry key="cssURLs">
          <list>
            <value>${webResources.baseURL}/jquery/plugins/ui/jquery-ui-tabs-customized/css/ui-lightness/jquery-ui-1.7.2.custom.css</value>
            <value>${themeBaseURL}/view-collectionlisting.css</value>
            <value>${themeBaseURL}/view-event-calendar-listing.css</value>
          </list>
        </entry>
        <entry key="jsURLs">
          <list>
            <value>${webResources.baseURL}/jquery/include-jquery.js</value>
            <value>${webResources.baseURL}/jquery/plugins/ui/jquery-ui-1.8.8.custom/js/jquery-ui-1.8.8.custom.min.js</value>
            <value>${webResources.baseURL}/jquery/plugins/ui/jquery-ui-1.8.8.custom/js/jquery.ui.datepicker-no.js</value>
            <value>${webResources.baseURL}/jquery/plugins/ui/jquery-ui-1.8.8.custom/js/jquery.ui.datepicker-nn.js</value>
            <value>${webResources.baseURL}/js/datepicker/datepicker-event-listing.js</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="eventCalenderContentProvider" class="org.vortikal.web.referencedata.provider.EventCalenderContentProvider">
    <property name="helper" ref="eventListingHelper" />
    <property name="currentMonthSearchComponent" ref="${override.listing.prefix}eventListing.currentMonthSearchComponent" />
    <property name="displayTypePropDef" ref="eventListing.displayTypePropDef" />
    <property name="resourceTypeTree" ref="resourceTypeTree" />
    <property name="startDatePropDefPointer" ref="${override.listing.prefix}eventListing.startDatePropDefPointer" />
    <property name="endDatePropDefPointer" ref="${override.listing.prefix}eventListing.endDatePropDefPointer" />
    <property name="viewAllUpcomingService" ref="calendarEventListing.viewAllUpcomingService" />
    <property name="viewAllPreviousService" ref="calendarEventListing.viewAllPreviousService" />
  </bean>

  <bean id="eventListing.startDatePropDefPointer" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>start-date</value>
    </constructor-arg>
  </bean>

  <bean id="eventListing.endDatePropDefPointer" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>end-date</value>
    </constructor-arg>
  </bean>

</beans>
