<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="calendarEventListing.viewService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="eventListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsEventListing" />
        <bean class="org.vortikal.web.service.ResourcePropertyAssertion">
          <property name="namespace" ref="EVENT_LISTING_NAMESPACE" />
          <property name="name" value="display-type" />
          <property name="value" value="calendar" />
          <property name="checkExistenceOnly" value="false" />
        </bean>
      </list>
    </property>
    <property name="handlerInterceptors">
      <list>
        <ref bean="noCacheViewHandlerInterceptor" />
      </list>
    </property>
    <property name="handler" ref="eventListing.calendarHandler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="eventListing.calendarHandler" class="org.vortikal.web.display.collection.event.EventCalendarListingController"
    parent="eventListing.handler">
    <property name="viewName" value="eventListingCalendar.view" />
    <property name="localeResolver" ref="viewServiceResourceAwareLocaleResolver" />
    <property name="dateValueFormatter" ref="dateValueFormatter" />
  </bean>

  <bean id="eventListing.groupedByDayEventSearchQueryString" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>
        (uri = {$currentFolder}/* AND type IN event) AND (start-date &gt;= {$currentDate+[1]d} AND start-date &lt; {$currentDate+[2]d})
      </value>
    </constructor-arg>
  </bean>

  <bean id="eventListing.furtherUpcomingSearchString" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>
        (uri = {$currentFolder}/* AND type IN event) AND (start-date &gt;= {$currentDate+[1]d})
      </value>
    </constructor-arg>
  </bean>

  <bean id="eventListing.specificDateEventSearchQueryString" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>
        (uri = {$currentFolder}/* AND type IN event) AND (start-date &gt;= [1] AND start-date &lt; [2])
      </value>
    </constructor-arg>
  </bean>

  <bean id="eventListingCalendar.view" parent="freemarkerView">
    <property name="url" value="pages/view-collection-listing.ftl" />
    <property name="referenceDataProviders">
      <list>
        <ref bean="eventCalenderContentProvider" />
      </list>
    </property>
    <property name="attributesMap">
      <map>
        <entry key="cssURLs">
          <list>
            <value>${themeBaseURL}/view-event-calendar-listing.css</value>
          </list>
        </entry>
        <entry key="jsURLs">
          <list>
            <value>${webResources.baseURL}/jquery/include-jquery.js</value>
            <value>${webResources.baseURL}/jquery-ui-1.7.1.custom/js/jquery-ui-1.7.1.custom.min.js</value>
            <value>${webResources.baseURL}/jquery/datepicker/datepicker.override.js</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="eventCalenderContentProvider" class="org.vortikal.web.referencedata.provider.EventCalenderContentProvider"
    parent="repositoryAware">
    <property name="calendarPlannedEventsService" ref="calendarPlannedEventsService" />
  </bean>

  <bean id="calendarPlannedEventsService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="calendarEventListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <bean class="org.vortikal.web.service.RequestParameterExistsAssertion">
          <property name="parameterName" value="planned-event-days" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="calendarPlannedEventsHandler" />
  </bean>

  <bean id="calendarPlannedEventsHandler" class="org.vortikal.web.display.collection.event.EventCalendarPlannedEventDatesHandler"
    parent="repositoryAware">
    <property name="searcher" ref="eventListing.eventListingSearcher" />
    <property name="displayTypePropDef" ref="eventListing.displayTypePropDef" />
    <property name="resourceTypeTree" ref="resourceTypeTree" />
    <property name="startDatePropDefPointer" ref="${override.listing.prefix}eventListing.startDatePropDefPointer" />
  </bean>

  <bean id="eventListing.startDatePropDefPointer" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>start-date</value>
    </constructor-arg>
  </bean>

</beans>