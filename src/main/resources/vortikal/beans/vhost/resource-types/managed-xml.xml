<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- Managed XML resource -->

  <bean id="managedXmlResource" class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="managed-xml"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="xmlResource" />
    <property name="mixinTypeDefinitions">
      <list>
        <ref bean="visualProfileMixinResourceTypeDef" />
        <ref bean="ssiMixinResourceTypeDef" />
      </list>
    </property>    
    <property name="assertions">
      <list>
        <ref bean="schemaPropSet" />
      </list>
    </property>
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="plaintextEditPropDef" />
        <ref bean="managedXmlTitlePropDef" />
      </list>
    </property>
    <property name="overriddenPropertyTypeDefinitions">
      <list>
        <ref bean="managedXmlOverriddenTitlePropDef" />
      </list>
    </property>

  </bean>

  <bean id="resourceTypeIsManagedXml" class="org.vortikal.web.service.ResourceTypeAssertion">
    <property name="resourceTypeDefinition" ref="managedXmlResource" />
  </bean>

  <bean id="plaintextEditPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="plaintext-edit" />
    <property name="type" ref="TYPE_BOOLEAN" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
    <property name="allowedValues">
      <list>
        <bean class="org.vortikal.repository.resourcetype.Value">
          <constructor-arg type="boolean">
            <value>true</value>
          </constructor-arg>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="managedXmlTitlePropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="managedXmlTitle" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="managedXmlTitlePropertyEvaluator" />
  </bean>

  <!--
  <bean id="managedXmlOverriddenTitlePropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="managedXmlTitle" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="managedXmlTitlePropertyEvaluator" />
  </bean>
  -->

  <bean id="managedXmlOverriddenTitlePropDef"
        class="org.vortikal.repository.resourcetype.OverridingPropertyTypeDefinitionImpl">
    <property name="overriddenPropDef" ref="titlePropDef" />
    <property name="contentModificationEvaluator" ref="managedXmlOverriddenTitlePropertyEvaluator" />
    <property name="nameModificationEvaluator" ref="managedXmlOverriddenTitlePropertyEvaluator" />
  </bean>

  <bean id="managedXmlOverriddenTitlePropertyEvaluator" parent="titleEvaluator">
    <property name="fallbackTitlePropDef" ref="managedXmlTitlePropDef"/>
  </bean>


  <bean id="schemaPropSet" 
        class="org.vortikal.web.service.ResourcePropertyAssertion">
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="name" value="schema" />    
    <property name="checkExistenceOnly" value="true" />
  </bean>

  <bean id="managedXmlTitlePropertyEvaluator"
        class="org.vortikal.repository.resourcetype.property.PropertyValueConditionalEvaluator">
    <property name="propertyDefinition" ref="schemaPropDef" />
    <property name="conditionalValueEvaluatorMap">
      <map>
        <entry key="http://www.uio.no/xsd/admhb/dokumentindeks/v.../dokumentindeks.xsd">
          <bean parent="abstractXPathEvaluator">
            <property name="expression" value="/dokumentindeks/tittel" />
          </bean>
        </entry>
      </map>
    </property>
  </bean>




</beans>
