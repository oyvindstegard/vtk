<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- Image resource -->

  <bean id="imageResourceTypeDefinition"
        class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="image"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="fileResourceTypeDefinition" />
    <property name="assertions">
      <list>
        <ref bean="contentTypeMatchesImage" />
      </list>
    </property>
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="imageHeightPropDef" />
        <ref bean="imageWidthPropDef" />
        <ref bean="thumbnailPropDef" />
        <ref bean="photographerPropDef"/>
        <ref bean="imageHtmlDescriptionPropDef" />
      </list>
    </property>
  </bean>

  <bean id="imageHtmlDescriptionPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="image-description" /> 
    <property name="type" value="HTML" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>

  <bean id="asWebpageAssertion" class="org.vortikal.web.service.RequestParameterAssertion">
    <property name="parameterName" value="vrtx" />
    <property name="parameterValue" value="view-as-webpage" />
  </bean>

  <bean id="viewImageInfoService.urlProvider" class="org.vortikal.web.referencedata.provider.ResourceServiceURLProvider">
    <property name="modelName" value="previewImage" />
    <property name="urlName" value="URL" />
    <property name="service" ref="viewImageInfoService" />
  </bean>

  <bean id="viewImageInfoService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="contentTypeMatchesImage" />
        <ref bean="asWebpageAssertion" />
      </list>
    </property>
    <property name="handler" ref="imageWithInfoHandler" />
  </bean>

  <bean id="imageWithInfoHandler" class="org.vortikal.web.display.image.DisplayImageWithInfoController">
    <property name="viewName" value="imageWithInfoView" />
    <property name="titlePropDef" ref="titlePropDef" />
    <property name="descriptionPropDef" ref="imageHtmlDescriptionPropDef" />
  </bean>

  <bean id="imageWithInfoViewResolver" parent="decoratorViewResolver">
    <property name="views">
      <map>
        <entry key="imageWithInfoView" value-ref="imageWithInfoView" />
      </map>
    </property>
  </bean>

  <bean name="imageWithInfoView" parent="freemarkerView">
    <property name="url" value="pages/image-as-html.ftl" />
    <property name="attributesMap">
      <map>
        <entry key="copyrightHelpURL.no" value="${copyrightHelpURL.no}" />
        <entry key="copyrightHelpURL.nn" value="${copyrightHelpURL.nn}" />
        <entry key="copyrightHelpURL.en" value="${copyrightHelpURL.en}" />
        <entry key="jsURLs">
          <list>
            <value>${jquery.baseURL}/include-jquery.js</value>
            <value>${jquery.baseURL}/plugins/jquery.ba-postmessage.min.js</value>
            <value>${webResources.baseURL}/js/iframe-view-not-another-iframe.js</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="imageHeightPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="pixelHeight" />
    <property name="type" value="INT" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="propertyEvaluator" ref="imageHeightEvaluator" />
  </bean>

  <bean id="imageHeightEvaluator" class="org.vortikal.repository.resourcetype.property.ImageDimensionEvaluator">
    <property name="evaluateHeight" value="true" />
  </bean>

  <bean id="imageWidthPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="pixelWidth" />
    <property name="type" value="INT" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="propertyEvaluator" ref="imageWidthEvaluator" />
  </bean>

  <bean id="imageWidthEvaluator" class="org.vortikal.repository.resourcetype.property.ImageDimensionEvaluator">
    <property name="evaluateHeight" value="false" />
  </bean>

  <bean id="thumbnailPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="thumbnail" />
    <property name="type" value="BINARY" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="propertyEvaluator" ref="thumbnailEvaluator" />
  </bean>

  <bean id="thumbnailEvaluator" class="org.vortikal.repository.resourcetype.property.ThumbnailEvaluator">
    <property name="imageService">
        <bean class="org.vortikal.graphics.ImageServiceImpl" />
    </property>
    <property name="width" value="${resourcetype.image.thumbnail.width}" />
    <property name="maxSourceImageFileSize" value="${resourcetype.image.thumbnail.maxSourceImageFileSize}" />
    <property name="maxSourceImageRawMemoryUsage" value="${resourcetype.image.thumbnail.maxSourceImageRawMemoryUsage}" />
    <property name="scaleUp" value="false" />
    <property name="supportedFormats">
      <set>
        <value>jpeg</value>
        <value>jpg</value>
        <value>gif</value>
        <value>png</value>
        <value>bmp</value>
        <value>pjpeg</value><!-- Microsoft -->
      </set>
    </property>
  </bean>

  <bean id="resourceTypeIsImage" class="org.vortikal.web.service.ResourceTypeAssertion" parent="repositoryAware">
    <property name="resourceTypeDefinition" ref="imageResourceTypeDefinition" />
  </bean>

</beans>
