<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- Image resource -->

  <bean id="imageResourceTypeDefinition"
        class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="image"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="fileResourceTypeDefinition" />
    <property name="assertions">
      <list>
        <ref bean="contentTypeMatchesImage" />
      </list>
    </property>
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="imageHeightPropDef" />
        <ref bean="imageWidthPropDef" />
        <!-- Ref to the binary property, stored in "default" property table (extra_prop_entry) -->
        <ref bean="thumbnailRefPropDef" />
        <!-- The actual binary property, stored in separate table (binary_prop_entry) -->
        <ref bean="thumbnailPropDef" />
      </list>
    </property>
  </bean>

  <bean id="contentTypeMatchesImage" 
        class="org.vortikal.web.service.ResourceContentTypeRegexpAssertion">
    <property name="pattern" value="image/(.+)" />
  </bean>

  <bean id="imageHeightPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="pixelHeight" />
    <property name="type" value="INT" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="imageHeightEvaluator" />
  </bean>

  <bean id="imageHeightEvaluator" 
        class="org.vortikal.repository.resourcetype.property.ImageDimensionEvaluator">
    <property name="evaluateHeight" value="true" />
  </bean>

  <bean id="imageWidthPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="pixelWidth" />
    <property name="type" value="INT" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="imageWidthEvaluator" />
  </bean>

  <bean id="imageWidthEvaluator" 
        class="org.vortikal.repository.resourcetype.property.ImageDimensionEvaluator">
    <property name="evaluateHeight" value="false" />
  </bean>
  
  <bean id="thumbnailPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="thumbnail" />
    <property name="type" value="BINARY" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="thumbnailEvaluator" />
  </bean>

  <bean id="thumbnailEvaluator" 
        class="org.vortikal.repository.resourcetype.property.ThumbnailEvaluator">
    <property name="imageService" ref="imageService" />
    <property name="width" value="250" />
  </bean>
  
  <bean id="thumbnailRefPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="binaryRef" />
    <property name="type" value="STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="false" />
    <property name="contentModificationEvaluator" ref="binaryRefEvaluator" />
  </bean>
  
  <bean id="binaryRefEvaluator" 
        class="org.vortikal.repository.resourcetype.property.BinaryReferenceEvaluator">
  </bean>

</beans>


