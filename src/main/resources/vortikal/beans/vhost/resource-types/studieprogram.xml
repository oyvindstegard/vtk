  <bean id="studieprogramStikkordProgramvelgerPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="stikkord-programvelger" />
    <property name="type" value="STRING" />
