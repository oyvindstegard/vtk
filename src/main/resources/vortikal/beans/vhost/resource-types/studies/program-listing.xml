<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">


  <bean id="programResourceTypeDefinition" class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="program-listing" />
    <property name="namespace" ref="PROGRAM_NAMESPACE" />
    <property name="parentTypeDefinition" ref="collectionResourceTypeDefinition" />
    <property name="assertions">
      <list>
        <bean class="org.vortikal.web.service.ResourcePropertyAssertion">
          <property name="namespace" ref="DEFAULT_NAMESPACE" />
          <property name="name" value="collection-type" />
          <property name="value" value="program-listing" />
          <property name="checkExistenceOnly" value="false" />
        </bean>
      </list>
    </property>
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="facultyPropDef" />
      </list>
    </property>
  </bean>

  <bean id="resourceIsProgramListing" class="org.vortikal.web.service.ResourceTypeAssertion" parent="repositoryAware">
    <property name="resourceTypeDefinition" ref="programResourceTypeDefinition" />
    <property name="exactMatch" value="true" />
  </bean>

 <bean id="facultyPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="faculty" />
    <property name="type" value="STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
    <property name="vocabulary">
      <bean class="org.vortikal.repository.resourcetype.ValueVocabulary">
        <property name="messageSourceBaseName" value="vortikal.beans.vhost.resource-types.mixins.properties.units" />
        <property name="values">
          <list>
            <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>hf</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
            <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>jf</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
            <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>mn</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
            <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>mf</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
            <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>od</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
            <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>sv</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
            <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>tf</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
            <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>uv</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
           </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="programSortPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="sortby" />
    <property name="type" value="STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
    <property name="valueFormatter">
      <bean class="org.vortikal.repository.resourcetype.MessageSourceValueFormatter">
        <constructor-arg value="vortikal.beans.vhost.resource-types.properties.program-sort" />
        <constructor-arg value="STRING" />
      </bean>
    </property>
    <property name="vocabulary">
      <bean class="org.vortikal.repository.resourcetype.ValueVocabulary">
        <property name="values">
          <list>
            <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>grad</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
          </list>
        </property>
      </bean>
    </property>
    <property name="metadata">
      <map>
        <entry key="editingHints">
          <map>
            <entry key="radio" value="true" />
          </map>
        </entry>
      </map>
    </property>
  </bean>
  
    <bean id="displayGradeSortPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="program-display-grade" />
    <property name="type" value="STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
    <property name="valueFormatter">
      <bean class="org.vortikal.repository.resourcetype.MessageSourceValueFormatter">
        <constructor-arg value="vortikal.beans.vhost.resource-types.properties.faculty" />
        <constructor-arg value="STRING" />
      </bean>
    </property>
    <property name="vocabulary">
      <bean class="org.vortikal.repository.resourcetype.ValueVocabulary">
        <property name="values">
          <list>
            <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>master</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
              <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>bachelor</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
              <bean class="org.vortikal.repository.resourcetype.Value">
              <constructor-arg type="java.lang.String">
                <value>profession</value>
              </constructor-arg>
              <constructor-arg ref="TYPE_STRING" />
            </bean>
          </list>
        </property>
      </bean>
    </property>
    <property name="metadata">
      <map>
        <entry key="editingHints">
          <map>
            <entry key="radio" value="true" />
          </map>
        </entry>
      </map>
    </property>
  </bean>
  
</beans>