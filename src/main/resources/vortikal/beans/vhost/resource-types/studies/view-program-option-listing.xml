<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean id="programOptionListing.viewService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsProgramOptionListing" />
      </list>
    </property>
    <property name="handler" ref="programOptionListing.handler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="programOptionListing.handler" class="org.vortikal.web.display.collection.studies.ProgramOptionListingController"
    parent="collectionListing.handler">
    <property name="searchComponents">
      <list>
        <ref bean="programOptionListing.searchComponent" />
      </list>
    </property>
    <property name="viewName" value="programOptionListing.view" />
  <!--   <property name="supportedDisplayTypes">
      <set>
        <value>list</value>
        <value>gallery</value>
        <value>table</value>
      </set>
    </property>
     -->
  </bean>

  <bean id="programOptionListing.searchComponent" parent="collectionListing.searchComponent">
    <property name="name" value="programOptionListing.defaultListing" />
    <property name="listingUriQueryBuilder" ref="collection.defaultRecursiveListingUriQueryBuilder" />
    <property name="queryBuilders">
      <list>
        <bean parent="queryStringParser">
          <property name="queryString" value="type IN programOption" />
        </bean>
      </list>
    </property>
  </bean>

  <bean id="programOptionListing.viewResolver" parent="decoratorViewResolver">
    <property name="views">
      <map>
        <entry key="programOptionListing.view" value-ref="programOptionListing.view" />
      </map>
    </property>
  </bean>

  <bean id="programOptionListing.view" parent="collectionListing.view">
    <property name="attributesMap">
      <map>
        
        <!-- CSS's -->
        <entry key="cssURLs">
          <map>
            <entry key="common">
              <list>
                <value>${themeBaseURL}/programOption-listing-component.css</value>
                <value>${themeBaseURL}/view-programOption-listing.css</value>
              </list>
            </entry>
            <entry key="gallery">
              <list>
                
              </list>
            </entry>
          </map>
        </entry>
        
        <!-- JS's -->
        <entry key="jsURLs">
          <map>
            <entry key="common">
              <list>
                <value>${webResources.baseURL}/jquery/include-jquery.js</value>
              </list>
            </entry>
            <entry key="table">
              <list>
                <value>${jsBaseURL}/plugins/tablesort-1.5.min.js</value>
                <value>${jsBaseURL}/plugins/tablesort-customsort.js</value>
              </list>
            </entry>
            <entry key="gallery">
              <list>
                <value>${jsBaseURL}/gallery.js</value>
              </list>
            </entry>
          </map>
        </entry>
        
      </map>
    </property>
  </bean>

  <bean id="programOptionListing.feedService" parent="collectionListing.atomService">
    <property name="order" value="-2" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsProgramOptionListing" />
        <ref bean="feedParameterSetAssertion" />
      </list>
    </property>
    <property name="handler" ref="programOptionListing.feedHandler" />
  </bean>

  <bean id="programOptionListing.feedHandler" parent="collectionListing.atomHandler">
    <property name="searchComponent" ref="programOptionListing.searchComponent" />
  </bean>
  
</beans>
