<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean id="additionalContentMixinResourceTypeDef" 
        class="org.vortikal.repository.resourcetype.MixinResourceTypeDefinitionImpl">
    <property name="name" value="additional-content-mixin"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" /> 
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="additionalContentPropDef" />
      </list>
    </property>
  </bean>  

  <bean id="additionalContentPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="contentRelation" value="PRE_CONTENT" />
    <property name="name" value="additionalContents"/>
    <property name="type" value="HTML"/>
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE"/>
    <property name="mandatory" value="false"/>
  </bean>

</beans>
