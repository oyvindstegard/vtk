<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- XHTML 1.0 resource -->


  <bean id="abstractXhtml10TransResourceTypeDefinition"
        class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="abstractXhtml10trans"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="htmlResourceTypeDefinition" />
    <property name="assertions">
      <list>
        <ref bean="docTypeIsXHtml10Transitional" />
      </list>
    </property>
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="xhtml10TransGuessedCharacterEncodingPropDef" />
      </list>
    </property>
  </bean>


  <bean id="xhtml10TransResourceTypeDefinition"
        class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="xhtml10trans"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="abstractXhtml10TransResourceTypeDefinition" />
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="xhtml10TransCharacterEncodingPropDef" />
      </list>
    </property>
  </bean>



  <bean id="xhtml10TransGuessedCharacterEncodingPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">

    <property name="name" value="guessedCharacterEncoding" />
    <property name="type" ref="TYPE_STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="true" />
    <property name="contentModificationEvaluator" ref="xhtml10TransGuessedCharacterEncodingEvaluator" />
    <property name="defaultValue">
      <bean class="org.vortikal.repository.resourcetype.Value">
        <constructor-arg type="java.lang.String"
                         value="${defaultXHtml10TransitionalResourceCharacterEncoding}" />
      </bean>
    </property>
  </bean>


  <bean id="xhtml10TransGuessedCharacterEncodingEvaluator" 
        class="org.vortikal.repository.resourcetype.property.ChainedPropertyEvaluator">
    <property name="propertyEvaluators">
      <list>
        <bean class="org.vortikal.repository.resourcetype.property.HtmlCharacterEncodingEvaluator" />
        <bean class="org.vortikal.repository.resourcetype.property.XMLCharacterEncodingEvaluator" />
      </list>
    </property>
  </bean>

  <!-- Overrides 'characterEncodingPropDef' in 'text' resource type -->
  <bean id="xhtml10TransCharacterEncodingPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="characterEncoding" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="true" />
    <property name="createEvaluator" ref="characterEncodingEvaluator" />
    <property name="contentModificationEvaluator" ref="xhtml10TransCharacterEncodingEvaluator" />
    <property name="propertiesModificationEvaluator" ref="xhtml10TransCharacterEncodingEvaluator" />
  </bean>

  <bean id="xhtml10TransCharacterEncodingEvaluator"
        class="org.vortikal.repository.resourcetype.property.FirstMatchPropertyEvaluator">
    <property name="propertyDefinitions">
      <list>
        <ref bean="userSpecifiedCharacterEncodingPropDef" />
        <ref bean="xhtml10TransGuessedCharacterEncodingPropDef" />
      </list>
    </property>
  </bean>

  <bean id="docTypeIsXHtml10Transitional"
        class="org.vortikal.web.service.ResourcePropertyRegexpAssertion">
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="name" value="docType" />
    <property name="pattern" value="html PUBLIC &#x22;-//W3C//DTD XHTML 1.0 Transitional//EN&#x22;\s+&#x22;http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd&#x22;"/>
  </bean>

</beans>
