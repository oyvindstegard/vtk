<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    
    <!-- Romskjema XML resource -->
    
    <!-- XXX: 'deprecated'. Resource type is kept for backwards compatability, but all property definitions are removed. -->
    <bean id="romskjemaXmlResource"
        class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
        <property name="name" value="romskjema"/>
        <property name="namespace" ref="ROMSKJEMA_NAMESPACE" />
        <property name="parentTypeDefinition" ref="managedXmlResource" />
        <property name="assertions">
            <list>
                <ref bean="schemaIsRomskjema" />
            </list>
        </property>
    </bean>
    
    <bean id="ROMSKJEMA_NAMESPACE" class="org.vortikal.repository.Namespace">
        <constructor-arg value="romskjema" />
        <constructor-arg value="http://www.uio.no/xsd/romfortegnelser/romskjema" />
    </bean>
    
    <bean id="schemaIsRomskjema" 
        class="org.vortikal.web.service.ResourcePropertyRegexpAssertion">
        <property name="namespace" ref="DEFAULT_NAMESPACE" />
        <property name="name" value="schema" />
        <property name="pattern" value="http://www.uio.no/xsd/romfortegnelser/romskjema/v00.*" />
    </bean>

    
        
</beans>
