<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- XHTML 1.0 resource -->

  <bean id="xhtml10ResourceTypeDefinition"
        class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="xhtml10"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="htmlResourceTypeDefinition" />
    <property name="assertions">
      <list>
        <ref bean="docTypeIsXHtml10" />
      </list>
    </property>
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="xhtml10GuessedCharacterEncodingPropDef" />
        <ref bean="xhtml10CharacterEncodingPropDef" />
      </list>
    </property>
  </bean>



  <bean id="xhtml10GuessedCharacterEncodingPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">

    <property name="name" value="guessedCharacterEncoding" />
    <property name="type" ref="TYPE_STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="true" />
    <property name="createEvaluator" ref="xhtml10GuessedCharacterEncodingEvaluator" />
    <property name="contentModificationEvaluator" ref="xhtml10GuessedCharacterEncodingEvaluator" />
  </bean>


  <bean id="xhtml10GuessedCharacterEncodingEvaluator" 
        class="org.vortikal.repository.resourcetype.property.XMLCharacterEncodingEvaluator">
    <property name="defaultEncoding" value="utf-8" />
  </bean>


  <!-- Overrides 'characterEncodingPropDef' in 'text' resource type -->
  <bean id="xhtml10CharacterEncodingPropDef"
        class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl">
    <property name="name" value="characterEncoding" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
    <property name="mandatory" value="true" />
    <property name="createEvaluator" ref="characterEncodingEvaluator" />
    <property name="contentModificationEvaluator" ref="xhtml10CharacterEncodingEvaluator" />
    <property name="propertiesModificationEvaluator" ref="xhtml10CharacterEncodingEvaluator" />
  </bean>

  <bean id="xhtml10CharacterEncodingEvaluator"
        class="org.vortikal.repository.resourcetype.property.FirstMatchPropertyEvaluator">
    <property name="propertyDefinitions">
      <list>
        <ref bean="userSpecifiedCharacterEncodingPropDef" />
        <ref bean="xhtml10GuessedCharacterEncodingPropDef" />
      </list>
    </property>
  </bean>


  <!-- XXX: The XHTML hierarchy (with exception of
       XHTML10Transitional, which we treat almost as HTML 4.x) is to be placed
       under the XML hierarchy -->
  <bean id="docTypeIsXHtml10" class="org.vortikal.web.service.RepositoryShortcutOrAssertion">
    <property name="assertions">
      <list>
        <ref bean="docTypeIsXHtml10Transitional" />
        <ref bean="docTypeIsXHtml10Frameset" />
        <ref bean="docTypeIsXHtml10Strict" />
      </list>
    </property>
  </bean>

  <bean id="docTypeIsXHtml10Transitional"
        class="org.vortikal.web.service.ResourcePropertyRegexpAssertion">
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="name" value="docType" />
    <property name="pattern" value="html PUBLIC &#x22;-//W3C//DTD XHTML 1.0 Transitional//EN&#x22;\s+&#x22;http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd&#x22;"/>
  </bean>

  <bean id="docTypeIsXHtml10Frameset"
        class="org.vortikal.web.service.ResourcePropertyRegexpAssertion">
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="name" value="docType" />
    <property name="pattern" value="html PUBLIC &#x22;-//W3C//DTD XHTML 1.0 Frameset//EN&#x22;\s+&#x22;http://www.w3.org/TR/xhtml1/DTD/xhtml1-frameset.dtd&#x22;" />
  </bean>

  <bean id="docTypeIsXHtml10Strict"
        class="org.vortikal.web.service.ResourcePropertyRegexpAssertion">
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="name" value="docType" />
    <property name="pattern" value="html PUBLIC &#x22;-//W3C//DTD XHTML 1.0 Strict//EN&#x22;\s+&#x22;http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd&#x22;" />
  </bean>

</beans>
