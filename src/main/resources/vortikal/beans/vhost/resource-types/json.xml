<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  
  <bean id="json.resourceType" class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="json-resource"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="fileResourceTypeDefinition" />
    <property name="assertions">
      <list>
        <ref bean="json.contentTypeAssertion" />
      </list>
    </property>
  </bean>

  <bean id="json.contentTypeAssertion" 
        class="org.vortikal.web.service.ResourceContentTypeAssertion">
    <property name="contentType" value="application/json" />
  </bean>


  <bean id="json.managedObjectResourceType"
        class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="managed-json-resource"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="json.resourceType" />
    <property name="assertions">
      <list>
        <ref bean="json.objectParseableAssertion" />
        <ref bean="json.objectHasResourceTypeAssertion" />
      </list>
    </property>
  </bean>

  <bean id="json.objectParseableAssertion"
        class="org.vortikal.web.service.JSONObjectParseableAssertion"
        parent="requestLocalRepositoryAware">
    <property name="token" ref="trustedToken" />
  </bean>

  <bean id="json.objectHasResourceTypeAssertion"
        class="org.vortikal.web.service.JSONObjectSelectAssertion"
        parent="requestLocalRepositoryAware">
    <property name="token" ref="trustedToken" />
    <property name="expression" value="resourcetype" />
  </bean>

</beans>
