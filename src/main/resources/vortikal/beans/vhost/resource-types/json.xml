<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <import resource="mixins/structured-resource-mixin.xml"/>

  <bean id="json.resourceType" class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="json-resource" />
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="fileResourceTypeDefinition" />
    <property name="assertions">
      <list>
        <ref bean="json.contentTypeAssertion" />
      </list>
    </property>
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="overriddenPublishedPropDef" />
        <ref bean="systemJobStatusPropDef" />
      </list>
    </property>
  </bean>

  <bean id="json.contentTypeAssertion" class="org.vortikal.web.service.ResourceContentTypeAssertion">
    <property name="contentType" value="application/json" />
  </bean>

  <bean id="json.managedObjectResourceType" class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="managed-json-resource" />
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="json.resourceType" />
    <property name="assertions">
      <list>
        <ref bean="json.validDocumentAssertion" />
      </list>
    </property>
    <property name="mixinTypeDefinitions">
      <list>
        <ref bean="structuredResourceMixinResourceTypeDef" />
      </list>
    </property>
  </bean>

  <bean id="json.objectParseableAssertion" class="org.vortikal.resourcemanagement.JSONObjectParseableAssertion" />
  
  <bean id="json.objectHasResourceTypeAssertion" class="org.vortikal.resourcemanagement.JSONObjectSelectAssertion">
    <property name="expression" value="resourcetype" />
  </bean>
  
  <bean id="json.validDocumentAssertion" class="org.vortikal.resourcemanagement.ValidDocumentAssertion">
    <property name="resourceManager" ref="structuredResources.resourceManager" />
  </bean>
  
  <bean id="systemJobStatusPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl"
    parent="abstractPropDef">
    <property name="name" value="system-job-status" />
    <property name="type" value="JSON" />
    <property name="multiple" value="true" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_UNEDITABLE" />
  </bean>

</beans>