<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!-- PHP resource type -->
  
  <bean id="phpResourceTypeDefinition"
        class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="php"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="textResourceTypeDefinition" />
    <property name="assertions">
      <list>
        <ref bean="contentTypeMatchesPhp" />
      </list>
    </property>
    <property name="overriddenPropertyTypeDefinitions">
      <list> 
        <ref bean="phpOverriddenGuessedCharacterEncodingPropDef" />
        <ref bean="phpOverriddenCharacterEncodingPropDef" />
      </list>
    </property>
  </bean>

  <bean id="phpOverriddenGuessedCharacterEncodingPropDef"
        class="org.vortikal.repository.resourcetype.OverridingPropertyTypeDefinitionImpl">
    <property name="overriddenPropDef" ref="guessedCharacterEncodingPropDef" />
    <property name="defaultValue">
      <bean class="org.vortikal.repository.resourcetype.Value">
        <constructor-arg type="java.lang.String"
                         value="${defaultPhpResourceCharacterEncoding}" />
      </bean>
    </property>
  </bean>

  <bean id="phpOverriddenCharacterEncodingPropDef"
        class="org.vortikal.repository.resourcetype.OverridingPropertyTypeDefinitionImpl">
    <property name="overriddenPropDef" ref="characterEncodingPropDef" />
  </bean>


  <bean id="contentTypeMatchesPhp" 
        class="org.vortikal.web.service.ResourceContentTypeRegexpAssertion">
    <property name="pattern" value="(application/x-php)|(text/x-php)|(text/php)" />
  </bean>

</beans>
