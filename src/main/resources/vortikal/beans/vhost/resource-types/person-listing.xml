        <ref bean="articleListing.sortingPropDef" />
        <ref bean="articleListing.hidePublishedDatePropDef" />
        <ref bean="articleListing.hideIntroductionPropDef" />
        <ref bean="articleListing.hideIntroductionImagePropDef" />
        <ref bean="articleListing.hideNumberOfComments" />
      </list> 
    </property> -->  
  </bean>
   
  <bean id="resourceIsPersonListing"
        class="org.vortikal.web.service.ResourceTypeAssertion">
    <property name="resourceTypeDefinition" ref="personListingResourceTypeDefinition" />
    <property name="exactMatch" value="true" />
  </bean>
  
