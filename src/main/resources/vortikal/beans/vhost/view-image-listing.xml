<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="imageListing.viewService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsImageListing" />
      </list>
    </property>
    <property name="handlerInterceptors">
      <list>
        <ref bean="noCacheViewHandlerInterceptor" />
      </list>
    </property>
    <property name="handler" ref="imageListing.handler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="imageListing.handler" class="org.vortikal.web.display.collection.ImageListingController"
    parent="collectionListing.handler">
    <property name="searchComponents">
      <list>
        <ref bean="imageListing.searchComponent" />
      </list>
    </property>
    <property name="viewName" value="imageListing.view" />
    <property name="supportedDisplayTypes">
      <set>
        <value>list</value>
        <value>gallery</value>
        <value>table</value>
      </set>
    </property>
  </bean>

  <bean id="imageListing.searchComponent" parent="collectionListing.searchComponent">
    <property name="name" value="imageListing.defaultListing" />
    <property name="defaultRecursive" value="true" />
    <property name="query">
      <value>(uri = {$currentFolder}/*) AND (type IN image)</value>
    </property>
  </bean>

  <bean id="imageListing.viewResolver" parent="decoratorViewResolver">
    <property name="views">
      <map>
        <entry key="imageListing.view" value-ref="imageListing.view" />
      </map>
    </property>
  </bean>

  <bean id="imageListing.view" parent="collectionListing.view">
    <property name="attributesMap">
      <map>
        
        <!-- CSS's -->
        <entry key="cssURLs">
          <map>
            <entry key="common">
              <list>
                <value>${themeBaseURL}/view-image-listing.css</value>
              </list>
            </entry>
            <entry key="gallery">
              <list>
                <value>${webResources.baseURL}/jquery/galleria/galleria.css</value>
                <value>${webResources.baseURL}/jquery/galleria/galleria.override.css</value>
              </list>
            </entry>
          </map>
        </entry>
        
        <!-- JS's -->
        <entry key="jsURLs">
          <map>
            <entry key="common">
              <list>
                <value>${webResources.baseURL}/jquery/jquery-1.3.2.min.js</value>
              </list>
            </entry>
            <entry key="list">
              <list>
                <value>${jsBaseURL}/image-listing.js</value>
              </list>
            </entry>
            <entry key="table">
              <list>
                <value>${jsBaseURL}/tablesort.js</value>
                <value>${jsBaseURL}/customsort-norwegian-mod.js</value>
              </list>
            </entry>
            <entry key="gallery">
              <list>
                <value>${webResources.baseURL}/jquery/galleria/jquery.galleria.min.js</value>
                <value>${webResources.baseURL}/jquery/galleria/galleria.js</value>
              </list>
            </entry>
          </map>
        </entry>
        
      </map>
    </property>
  </bean>

  <bean id="imageListing.feedService" parent="collectionListing.atomService">
    <property name="order" value="-2" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsImageListing" />
        <ref bean="feedParameterSetAssertion" />
      </list>
    </property>
    <property name="handler" ref="imageListing.feedHandler" />
  </bean>

  <bean id="imageListing.feedHandler" parent="collectionListing.atomHandler">
    <property name="searchComponent" ref="imageListing.searchComponent" />
  </bean>
  
</beans>