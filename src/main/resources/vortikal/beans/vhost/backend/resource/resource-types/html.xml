<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<import resource="text.xml" />
	<import resource="mixins/visual-profile.xml"/>
	<import resource="mixins/ssi.xml"/>
    
    <!-- Html resource -->
	<bean id="htmlResourceTypeDefinition"
		class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
		<property name="name" value="html" />
		<property name="namespace" ref="DEFAULT_NAMESPACE" />
		<property name="parentTypeDefinition" ref="textResourceTypeDefinition" />
		<property name="assertions">
			<list>
				<ref bean="contentTypeMatchesHtml" />
			</list>
		</property>
        <property name="mixinTypeDefinitions">
            <list>
                <ref bean="visualProfileMixinResourceTypeDef" />
                <ref bean="ssiMixinResourceTypeDef" />
            </list>
        </property>
		<property name="propertyTypeDefinitions">
			<list>
				<ref bean="htmlOverriddenGuessedCharacterEncodingPropDef" />
				<ref bean="htmlOverriddenCharacterEncodingPropDef" />
				<ref bean="htmlDocTypePropDef" />
				<ref bean="htmlTitlePropDef" />
				<ref bean="htmlOverriddenTitlePropDef" />
				<ref bean="htmlHasBodyContentPropDef" />
			</list>
		</property>
	</bean>
	
	<bean id="htmlDocTypePropDef"
		class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl"
		parent="abstractPropDef">
		<property name="name" value="docType" />
		<property name="contentModificationEvaluator" ref="docTypeEvaluator" />
	</bean>
	
	<bean id="docTypeEvaluator"
		class="org.vortikal.repository.resourcetype.property.DocTypeEvaluator" />
	
	<bean id="htmlTitlePropDef"
		class="org.vortikal.repository.resourcetype.OverridablePropertyTypeDefinitionImpl"
		parent="abstractPropDef">
		<property name="name" value="htmlTitle" />
		<property name="contentModificationEvaluator" ref="htmlTitlePropertyEvaluator" />
	</bean>
	
	<bean id="htmlTitlePropertyEvaluator"
		class="org.vortikal.repository.resourcetype.property.HtmlTitleElementEvaluator">
		<property name="characterEncodingPropertyDefinition" ref="characterEncodingPropDef" />
	</bean>
	
	<bean id="htmlOverriddenTitlePropDef"
		class="org.vortikal.repository.resourcetype.OverridingPropertyTypeDefinitionImpl">
		<property name="overriddenPropDef" ref="titlePropDef" />
		<property name="contentModificationEvaluator" ref="htmlOverriddenTitlePropertyEvaluator" />
		<property name="nameModificationEvaluator" ref="htmlOverriddenTitlePropertyEvaluator" />
	</bean>
	
	<bean id="htmlOverriddenTitlePropertyEvaluator" parent="titleEvaluator">
		<property name="fallbackTitlePropDef" ref="htmlTitlePropDef" />
	</bean>
	
	<bean id="htmlOverriddenGuessedCharacterEncodingPropDef"
		class="org.vortikal.repository.resourcetype.OverridingPropertyTypeDefinitionImpl">
		<property name="overriddenPropDef" ref="guessedCharacterEncodingPropDef" />
		<property name="contentModificationEvaluator" ref="htmlGuessedCharacterEncodingEvaluator" />
		<property name="defaultValue">
			<bean class="org.vortikal.repository.resourcetype.Value">
				<constructor-arg type="java.lang.String"
					value="${defaultHtmlResourceCharacterEncoding}" />
			</bean>
		</property>
	</bean>
	
	<bean id="htmlGuessedCharacterEncodingEvaluator"
		class="org.vortikal.repository.resourcetype.property.ChainedPropertyEvaluator">
		<property name="propertyEvaluators">
			<list>
				<bean
					class="org.vortikal.repository.resourcetype.property.HtmlCharacterEncodingEvaluator" />
				<bean
					class="org.vortikal.repository.resourcetype.property.XMLCharacterEncodingEvaluator" />
			</list>
		</property>
	</bean>

    <!-- Overrides 'characterEncodingPropDef' in 'text' resource type -->
	<bean id="htmlOverriddenCharacterEncodingPropDef"
		class="org.vortikal.repository.resourcetype.OverridingPropertyTypeDefinitionImpl">
		<property name="overriddenPropDef" ref="characterEncodingPropDef" />
	</bean>
	
	<bean id="htmlHasBodyContentPropDef"
		class="org.vortikal.repository.resourcetype.OverridablePropertyTypeDefinitionImpl"
		parent="abstractPropDef">
		<property name="name" value="hasBodyContent" />
		<property name="type" value="BOOLEAN" />
		<property name="mandatory" value="true" />
		<property name="defaultValue" ref="VALUE_TRUE" />
		<property name="contentModificationEvaluator" ref="htmlHasBodyContentEvaluator" />
	</bean>
	
	<bean id="htmlHasBodyContentEvaluator"
		class="org.vortikal.repository.resourcetype.property.HtmlHasBodyContentEvaluator">
		<property name="htmlUtil" ref="htmlUtil" />
		<property name="characterEncodingPropDef" ref="characterEncodingPropDef" />
	</bean>
	
</beans>