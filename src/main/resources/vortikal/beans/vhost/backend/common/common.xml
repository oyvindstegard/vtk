<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
          "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    
    <!-- Principal factory and related beans -->
	<bean id="principalFactory" class="org.vortikal.security.PrincipalFactory" />
	
	<bean id="messageSource" class="org.vortikal.web.context.ChildDelegatingMessageSource" />
	
	<bean id="defaultMessageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>vortikal.i18n.messages</value>
			</list>
		</property>
	</bean>
	
</beans>