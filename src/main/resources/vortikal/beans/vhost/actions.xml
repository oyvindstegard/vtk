    <property name="staticField"
              value="org.vortikal.repository.RepositoryAction.READ_WRITE_UNPUBLISHED" />
  </bean>
  
  <bean id="ACTION_CREATE"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.RepositoryAction.CREATE" />
  </bean>

  <bean id="ACTION_WRITE_ACL"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.RepositoryAction.WRITE_ACL" />
  </bean>

  <bean id="ACTION_UNLOCK"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
