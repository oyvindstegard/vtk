        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.RepositoryAction.REPOSITORY_ADMIN_ROLE_ACTION" />
  </bean>

  <bean id="ACTION_PROPERTY_EDIT_ROOT_ROLE"
