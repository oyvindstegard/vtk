<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <!-- ACL privileges: -->
  <bean id="PRIVILEGE_READ_PROCESSED"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.Privilege.READ_PROCESSED" />
  </bean>

  <bean id="PRIVILEGE_READ"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.Privilege.READ" />
  </bean>

  <!--
  <bean id="PRIVILEGE_BIND_TEMPLATE"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.Privilege.BIND_TEMPLATE" />
  </bean>
  -->

  <bean id="PRIVILEGE_READ_WRITE"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.Privilege.READ_WRITE" />
  </bean>

  <bean id="PRIVILEGE_READ_WRITE_UNPUBLISHED"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.Privilege.READ_WRITE_UNPUBLISHED" />
  </bean>
  
  <bean id="PRIVILEGE_ALL"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.Privilege.ALL" />
  </bean>

  <bean id="PRIVILEGE_ADD_COMMENT"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.Privilege.ADD_COMMENT" />
  </bean>


