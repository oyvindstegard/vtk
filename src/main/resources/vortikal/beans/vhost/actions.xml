  <bean id="ACTION_READ_PROCESSED"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.RepositoryAction.READ_PROCESSED" />
  </bean>

  <bean id="ACTION_READ"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.RepositoryAction.READ" />
  </bean>

  <bean id="ACTION_WRITE"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.RepositoryAction.WRITE" />
  </bean>

  <bean id="ACTION_READ_WRITE"
        class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
    <property name="staticField"
              value="org.vortikal.repository.RepositoryAction.READ_WRITE" />
