<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean id="editor.personListingEditService" parent="editor.abstractEditService">
    <property name="assertions">
      <list>
        <ref bean="resourceIsEmployeeListing" />
      </list>
    </property>
    <property name="handler" ref="editor.personEditHandler" />
  </bean>

  <bean id="editor.personEditHandler" class="org.vortikal.edit.editor.ResourceEditController">
    <property name="resourceManager" ref="editor.personResourceManager" />
    <property name="formView" value="editor.editView" />
    <property name="successView" value="redirectToPreviewCollection" />
  </bean>

  <bean id="editor.personResourceManager" class="org.vortikal.edit.editor.ResourceWrapperManager">
    <property name="htmlParser" ref="decorating.htmlParser" />
    <property name="htmlPropsFilter" ref="personResourceManager.htmlPropsFilter" />
    <property name="contentResourceType" ref="documentResourceTypeDefinition" />
    <property name="editPropertyProvider">
      <bean class="org.vortikal.edit.editor.ConfigurableEditablePropertyProvider">
        <property name="preContentProperties">
          <list>
            <ref bean="employeeListing.unitAreaCodePropDef" />
            <ref bean="userTitlePropDef" />
            <ref bean="navigationTitlePropDef" />
            <ref bean="importancePropDef" />
            <ref bean="hiddenPropDef" />
            <ref bean="pageLimitPropDef" />
            <ref bean="empolyeeListing.tagSearchSuggestionsPropDef" />
            <ref bean="empolyeeListing.displayTagsPropDef" />
            <ref bean="empolyeeListing.displayAffiliationTabsPropDef" />
          </list>
        </property>
      </bean>
    </property>
  </bean>

</beans>
