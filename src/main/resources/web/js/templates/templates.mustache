{{! STRING }}

<div class="{{ classes }}">
  <label for="{{ inputFieldName  }}">{{ elemTitle }}</label>
  <div class="inputfield vrtx-textfield">
    <input size="40" type="text" name="{{ inputFieldName }}" id="{{ inputFieldName }}" />
  </div>
</div>

### {{! HTML }}

<div class="{{ classes }}">
  <label for="{{ inputFieldName  }}">{{ elemTitle }}</label>
  <textarea name="{{ inputFieldName }}" id="{{ inputFieldName }}" rows="7" cols="60" ></textarea>
</div>

### {{! RADIO }}

<div class="vrtx-radio">
  <div>
    <label>{{ elemTitle }}</label>
  </div>

  <input name="{{ inputFieldName }}" id="{{ inputFieldName }}-true" type="radio" value="true" />
  <label for="{{ inputFieldName }}-true">True</label>

  <input name="{{ inputFieldName }}" id="{{ inputFieldName }}-false" type="radio" value="false" />
  <label for="{{ inputFieldName }}-false">False</label>
</div>

### {{! DROPDOWN }}

<div class="{{ classes }}">
  <label for="{{ inputFieldName }}">{{ elemTitle }}</label>
  <div class="inputfield">
    <select id="{{ inputFieldName }}" name="{{ inputFieldName }}">
      {{#options}}
         <option value="{{ key }}">{{ value }}</option>
      {{/options}} 
    </select>
  </div>
</div>

### {{! DATE }}

<div class="vrtx-string">
  <label for="{{ inputFieldName }}">{{ elemTitle }}</label>
  <div class="inputfield vrtx-textfield">
    <input size="20" type="text" name="{{ inputFieldName }}" id="{{ inputFieldName }}" value="" class="date" />
  </div>
</div>

### {{! BROWSE }}

<div class="{{ clazz }}">
  <div class="{{ clazz }}-label">
    <label for="{{ inputFieldName }}">{{ elemTitle }}</label>
  </div>
  <div class="{{ clazz }}-browse">
    <div class="vrtx-textfield">
      <input type="text" name="{{ inputFieldName }}" id="{{ inputFieldName }}" value="" size="{{ size }}" />
    </div>
    <div class="vrtx-button">
      <button type="button" onclick="browseServer('{{ inputFieldName }}', '{{ fckEditorBaseUrl }}', '{{ parentURI }}', '{{ fckBrowsePath }}', '{{ type }}');">
        {{ browseButtonText }}
      </button>
    </div>
  </div>
  {{{ preview }}}
</div>

### {{! BROWSE IMAGES }}

<div class="{{ clazz }}">
  <div class="{{ clazz }}-label">
    <label for="{{ inputFieldName }}">{{ elemTitle }}</label>
  </div>
  <div class="{{ clazz }}-browse">
    <div class="vrtx-textfield">
      <input type="text" class="preview-image-inputfield" name="{{ inputFieldName }}" id="{{ inputFieldName }}" value="" size="{{ size }}" />
    </div>
    <div class="vrtx-button">
      <button type="button" onclick="browseServer('{{ inputFieldName }}', '{{ fckEditorBaseUrl }}', '{{ parentURI }}', '{{ fckBrowsePath }}', '{{ type }}');">
        {{ browseButtonText }}
      </button>
    </div>
  </div>
  <div id="{{ inputFieldName }}.preview" class="vrtx-image-ref-preview no-preview" style="display: none">
    <label for="{{ inputFieldName }}.preview">{{ previewTitle }}</label>
	<span>{{ previewNoImageText }}</span>
    <div id="{{ inputFieldName }}.preview-inner" class="vrtx-image-ref-preview-inner">
      <img src="/vrtx/__vrtx/static-resources/themes/default/images/no-preview-image.png" alt="{{ previewNoImageText }}" />
    </div>
  </div>
</div>

### {{! ADD, REMOVE, MOVE UP, MOVE DOWN }}

<div class="vrtx-button vrtx-{{ clazz }}-button">
  <input type="button" value="{{ buttonText }}" />
</div>
