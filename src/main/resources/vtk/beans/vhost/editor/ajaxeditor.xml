<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
  <bean id="ajaxeditor.service" class="vtk.web.service.ServiceImpl">
    <property name="parent" ref="manageService" />
    <property name="order" value="-9800" />
    <property name="assertions">
      <list>
        <ref bean="fileAssertion" />
        <ref bean="requiresWritePermissionAssertion" />
        <bean class="vtk.web.service.RequestMethodAssertion">
          <property name="method" value="GET"/>
        </bean>
        <bean class="vtk.web.service.RequestParameterAssertion">
          <property name="parameterName" value="mode" />
          <property name="parameterValue" value="ajaxeditor" />
        </bean>
      </list>
    </property>
    <property name="attributes">
      <map>
        <entry key="tabOrder">
          <value type="java.lang.Integer">152</value>
        </entry>
      </map>
    </property>
    <property name="handlerFilters">
      <ref bean="system.csrfPreventionHandler" />
    </property>
    <property name="handler" ref="ajaxeditor.handler" />
  </bean>

  <bean id="ajaxeditor.adminJsonPutService" class="vtk.web.service.ServiceImpl">
    <property name="parent" ref="manageService" />
    <property name="order" value="-100" />
    <property name="assertions">
      <list>
        <bean class="vtk.web.service.RequestHeaderRegexpAssertion">
          <property name="header" value="Content-Type"/>
          <property name="pattern" value="application/(json|.+\+json)" />
        </bean>
        <bean class="vtk.web.service.RequestMethodAssertion">
          <property name="method" value="PUT" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="ajaxeditor.putHandler"/>
  </bean>

  <bean id="ajaxeditor.adminJsonGetService" class="vtk.web.service.ServiceImpl">
    <property name="parent" ref="manageService"/>
    <property name="order" value="-100" />
    <property name="assertions">
      <list>
        <ref bean="fileAssertion" />
        <ref bean="ajaxeditor.jsonAcceptAssertion" />
        <bean class="vtk.web.service.RequestMethodAssertion">
          <property name="method" value="GET" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="ajaxeditor.getHandler"/>
  </bean>

  <bean id="ajaxeditor.jsonGetService" class="vtk.web.service.ServiceImpl">
    <property name="parent" ref="viewService"/>
    <property name="order" value="-100" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsPublishedAssertion" />
        <ref bean="fileAssertion" />
        <ref bean="ajaxeditor.jsonAcceptAssertion" />
        <bean class="vtk.web.service.RequestMethodAssertion">
          <property name="method" value="GET" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="ajaxeditor.getHandler"/>
  </bean>

  <bean id="ajaxeditor.putHandler" class="vtk.web.api.PutController">
    <constructor-arg value="${upload.maxFileSize}" />
    <constructor-arg value="${revisionStore.maxFileSize}" />
    <constructor-arg ref="versioning.handleRevisionAssertions" />
  </bean>

  <bean id="ajaxeditor.getHandler" class="vtk.web.display.file.DisplayResourceController">
    <property name="viewName" value="webdavDisplayResource" />
    <property name="ignoreLastModified" value="true" />
  </bean>

  <bean id="ajaxeditor.handler" class="vtk.web.AjaxEditorController">
    <constructor-arg ref="ajaxeditor.editView"/>
    <constructor-arg ref="manage.staticResourceResolver" />
    <constructor-arg value="${doctypes.appResourceURL}" />
    <constructor-arg value="${doctypes.appPath}" />
    <constructor-arg value="${doctypes.staticResourceURL}" />
  </bean>

  <bean id="ajaxeditor.editView" parent="freemarkerView">
    <property name="url" value="editor/ajaxeditor.ftl" />
  </bean>

  <bean id="ajaxeditor.jsonAcceptAssertion" class="vtk.web.service.RequestHeaderRegexpAssertion">
    <property name="header" value="Accept"/>
    <property name="pattern" value=".*application/json.*" />
  </bean>

</beans>
