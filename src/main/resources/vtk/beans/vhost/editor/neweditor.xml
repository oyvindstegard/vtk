<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
  <bean id="neweditor.service" class="vtk.web.service.ServiceImpl">
    <property name="parent" ref="manageService" />
    <property name="order" value="-9800" />
    <property name="assertions">
      <list>
        <bean id="put" class="vtk.web.service.RequestMethodAssertion">
          <property name="method" value="GET"/>
        </bean>
        <ref bean="neweditor.modeParameterAssertion" />
      </list>
    </property>
    <property name="attributes">
      <map>
        <entry key="tabOrder">
          <value type="java.lang.Integer">152</value>
        </entry>
      </map>
    </property>
    <property name="handlerFilters">
      <ref bean="system.csrfPreventionHandler" />
    </property>
    <property name="handler" ref="neweditor.handler" />
  </bean>

  <bean id="neweditor.putService" class="vtk.web.service.ServiceImpl">
    <property name="parent" ref="manageService" />
    <property name="order" value="-100" />
    <property name="assertions">
      <list>
        <bean id="put" class="vtk.web.service.RequestMethodAssertion">
          <property name="method" value="PUT" />
        </bean>
        <ref bean="neweditor.modeParameterAssertion" />
      </list>
    </property>
    <property name="handler" ref="neweditor.putHandler"/>
  </bean>

  <bean id="neweditor.getService" class="vtk.web.service.ServiceImpl">
    <property name="parent" ref="viewService"/>
    <property name="order" value="-100" />
    <property name="assertions">
      <list>
        <bean class="vtk.web.service.RequestMethodAssertion">
          <property name="method" value="GET" />
        </bean>
        <bean class="vtk.web.service.RequestHeaderRegexpAssertion">
          <property name="header" value="Accept"/>
          <property name="pattern" value=".*application/json.*" />
        </bean>
        <ref bean="neweditor.modeParameterAssertion" />
      </list>
    </property>
    <property name="handler" ref="neweditor.getHandler"/>
  </bean>

  <bean id="neweditor.putHandler" class="vtk.webdav.PutController">
    <property name="maxUploadSize" value="${upload.maxFileSize}" />
    <property name="obeyClientCharacterEncoding" value="false" />
    <property name="deniedFileNames" ref="webdav.deniedFileNamePatterns" />
  </bean>

  <bean id="neweditor.getHandler" class="vtk.web.display.file.DisplayResourceController">
    <property name="viewName" value="webdavDisplayResource" />
    <property name="ignoreLastModified" value="true" />
  </bean>

  <bean id="neweditor.handler" class="vtk.web.NewEditorController">
    <constructor-arg ref="neweditor.editView"/>
  </bean>

  <bean id="neweditor.editView" parent="freemarkerView">
    <property name="url" value="editor/neweditor.ftl" />
  </bean>

  <bean id="neweditor.modeParameterAssertion" class="vtk.web.service.RequestParameterAssertion">
    <property name="parameterName" value="mode" />
    <property name="parameterValue" value="neweditor" />
  </bean>

</beans>
