<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
  <bean id="neweditor.service" class="vtk.web.service.ServiceImpl">
    <property name="parent" ref="manageService" />
    <property name="order" value="-9800" />
    <property name="assertions">
      <list>
        <ref bean="editor.modeParameterAssertion" />
      </list>
    </property>
    <property name="attributes">
      <map>
        <entry key="tabOrder">
          <value type="java.lang.Integer">152</value>
        </entry>
      </map>
    </property>
    <property name="handlerFilters">
      <ref bean="system.csrfPreventionHandler" />
    </property>
    <property name="handler" ref="neweditor.handler" />
  </bean>

  <bean id="editor.modeParameterAssertion" class="vtk.web.service.RequestParameterAssertion">
    <property name="parameterName" value="mode" />
    <property name="parameterValue" value="neweditor" />
  </bean>

  <bean id="neweditor.handler" class="vtk.web.NewEditorController">
    <constructor-arg ref="neweditor.editView"/>
  </bean>

  <bean id="neweditor.editView" parent="freemarkerView">
    <property name="url" value="editor/neweditor.ftl" />
  </bean>

</beans>
