<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

   <bean id="groovy.shell" class="vtk.shell.ss.ShellSocketConnector">
      <description>
         Management and debugging socket console with Groovy interpreter.
      </description>
      <property name="listenAddress" value="${groovy.shell.listenAddress}" />
      <property name="port" value="${groovy.shell.listenPort}" />
      <property name="shellSessionFactory">
        <bean class="vtk.shell.ss.GroovyShellSessionFactory">
          <property name="initFiles" value="#{'${groovy.shell.initFiles}'.split('\\s*,\\s*')}"/>
        </bean>
      </property>
   </bean>

</beans>
