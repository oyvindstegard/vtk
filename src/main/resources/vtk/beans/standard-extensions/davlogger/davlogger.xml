<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <!-- Enable this extension to log protocol for all webdav service requests. -->
    
  <bean id="davRequestLogger" class="vtk.web.filter.CaptureInputRequestFilter" >
    <property name="order" value="-1000" />
    <property name="maxCaptureBytes" value="${davlogger.maxLogBytesBody}"/>
  </bean>
  
  <bean parent="defaultRequestFiltersBuilder">
    <property name="arguments" ref="davRequestLogger" />
  </bean>

  <bean id="davResponseLogger" class="vtk.web.filter.CaptureOutputLoggingResponseFilter" >
    <property name="order" value="-1000" />
    <property name="service" ref="webdavService" />
    <property name="maxLogBytesBody" value="${davlogger.maxLogBytesBody}" />
  </bean>

  <bean parent="defaultResponseFiltersBuilder">
    <property name="arguments" ref="davRequestLogger" />
  </bean>

</beans>
