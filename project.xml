  <!-- build information for the project -->

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <!--unitTestSourceDirectory>test/java</unitTestSourceDirectory-->

    <integrationUnitTestSourceDirectory/>
    <!-- Unit test classes -->

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
        <include>**/*TestSuite.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${pom.build.unitTestSourceDirectory}</directory>
          <includes>
            <include>**/*.xml</include>
            <include>**/*.xsd</include>
            <include>log4j.properties</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
    <!-- J A R  R E S O U R C E S -->
    <!-- Resources that are packaged up inside the JAR file -->

    <resources>
      <resource>
        <!-- Include the MIME type helper file in the jar under
            '/org/vortikal/repositoryimpl'. -->

        <directory>src/java/org/vortikal/repositoryimpl</directory>
        <targetPath>org/vortikal/repositoryimpl</targetPath>
        <includes>
          <include>mime.properties</include>
        </includes>
      </resource>
      <resource>
        <!-- Include Language bundles in the jar under '/'. -->

        <directory>src/i18n</directory>
        <targetPath>/</targetPath>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
      <resource>
        <!-- Include FreeMarker templates in the jar under '/ftl'. -->
        <!--
         TODO: should move 'src/webapp/WEB-INF/ftl' to 'src/ftl', to
         avoid duplication of ftl files in webapps.
       -->

        <directory>src/webapp/WEB-INF/ftl</directory>
        <targetPath>/ftl</targetPath>
        <includes>
          <include>**/*.ftl</include>
        </includes>
      </resource>
    </resources>
  </build>
