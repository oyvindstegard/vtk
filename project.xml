  <!-- build information for the project -->
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>test/java</unitTestSourceDirectory>
    <integrationUnitTestSourceDirectory/>
    <!-- Unit test classes -->
    <unitTest>
      <excludes>
         <exclude>**/Abstract*.java</exclude>
      </excludes>
      <includes>
        <include>**/*Test.java</include>
        <include>**/*TestSuite.java</include>
        <include>**/*TestCase.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${pom.build.unitTestSourceDirectory}</directory>
          <includes>
            <include>**/*.xml</include>
            <include>**/*.xsd</include>
            <include>**/*.properties</include>
          </includes>
        </resource>
      </resources>
    </unitTest>

    <!-- Resources that are packaged up inside the JAR file -->
    <resources>
      <!-- Include bean definition files in the jar/war
           under '/vortikal/beans'. -->
      <resource>
        <directory>conf/beans</directory>
        <targetPath>/vortikal/beans</targetPath>
        <includes>
          <include>**/*</include>
        </includes>
        <excludes>
          <exclude>extensions.xml</exclude>
        </excludes>
      </resource>
      <resource>
        <!-- Include the MIME type helper file in the jar under
            '/org/vortikal/repositoryimpl'. -->
        <directory>src/java/org/vortikal/util/repository</directory>
        <targetPath>org/vortikal/util/repository</targetPath>
        <includes>
          <include>mime.properties</include>
        </includes>
      </resource>
      <resource>
        <!-- Include Language bundles in the jar under '/'. -->
        <directory>src/i18n</directory>
        <targetPath>/vortikal/i18n</targetPath>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
      <resource>
        <!-- Include SQL DDL files. -->
        <directory>src/sql</directory>
        <targetPath>/vortikal/sql</targetPath>
        <includes>
          <include>*-schema.sql</include>
        </includes>
      </resource>
      <resource>
        <!-- Include iBATIS SQL maps. -->
        <directory>src/java/org/vortikal/repositoryimpl/dao/ibatis</directory>
        <targetPath>/org/vortikal/repositoryimpl/dao/ibatis</targetPath>
        <includes>
          <include>*.xml</include>
        </includes>
      </resource>
      <!-- Include the change log XML file in the jar under
           '/vortikal-changes'. -->
      <resource>
        <directory>xdocs</directory>
        <targetPath>vortikal-changes</targetPath>
        <includes>
          <include>changes.xml</include>
        </includes>
      </resource>
      <resource>
        <!-- Include FreeMarker templates in the jar under '/vortikal/ftl'. -->
        <directory>src/ftl</directory>
        <targetPath>/vortikal/ftl</targetPath>
        <includes>
          <include>**/*.ftl</include>
        </includes>
      </resource>
      <!-- Include CSS/graphics/JavaScript files in the jar/war
           under '/vortikal/resources'. -->
      <resource>
        <directory>resources</directory>
        <targetPath>/vortikal/resources</targetPath>
        <includes>
          <include>**/*</include>
        </includes>
      </resource>
      <!-- Include Standard Kupu resources in the jar/war
           under '/vortikal/resources/kupu-resources'. -->
      <resource>
        <directory>ext/kupu/v1.3.5</directory>
        <targetPath>/vortikal/resources/kupu-resources</targetPath>
        <includes>
          <include>common/**</include>
          <include>i18n/**</include>
        </includes>
      </resource>
    </resources>
  </build>
