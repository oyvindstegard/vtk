<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <!-- Content description Mixin -->
  
  <bean id="contentDescriptionMixinResourceTypeDef" 
        class="org.vortikal.repository.resourcetype.MixinResourceTypeDefinitionImpl">
    <property name="name" value="contentDescription"/>
    <property name="namespace" ref="CONTENT_NAMESPACE" /> 
    <property name="propertyTypeDefinitions" ref="contentDescriptionPropertyDefinitions" />
  </bean>

  <bean id="contentDescriptionPropertyDefinitions"
        class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list>
        <ref bean="verifiedDatePropDef" />
        <ref bean="keywordsPropDef" />
        <ref bean="descriptionPropDef" />
        <ref bean="authorNamePropDef" />
        <ref bean="authorEmailPropDef" />
        <ref bean="authorURLPropDef" />
        <ref bean="photographerPropDef" />
      </list>
    </property>
  </bean>

  <bean id="verifiedDatePropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="verifiedDate" /> 
    <property name="type" value="TIMESTAMP" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>

  <bean id="authorNamePropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="authorName" /> 
    <property name="type" value="STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>

  <bean id="authorEmailPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="authorEmail" /> 
    <property name="type" value="STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>

  <bean id="authorURLPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="authorURL" /> 
    <property name="type" value="STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>

  <bean id="keywordsPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="keywords" /> 
    <property name="type" value="STRING" />
    <property name="multiple" value="true" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>

  <bean id="descriptionPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="description" /> 
    <property name="type" value="HTML" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>

  <bean id="photographerPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="photographer" />
    <property name="type" value="STRING" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>

</beans>
