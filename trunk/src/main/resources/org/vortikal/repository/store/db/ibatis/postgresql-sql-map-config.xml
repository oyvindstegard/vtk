<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//iBATIS.com//DTD SQL Map Config 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
<sqlMapConfig>
	
  <!-- Global type handler for Path -->    
  <typeHandler
    javaType="org.vortikal.repository.Path"
    callback="org.vortikal.repository.store.db.ibatis.PathTypeHandlerCallback"/>

  <!-- PostgreSQL-specific SQL maps -->
	<sqlMap resource="org/vortikal/repository/store/db/ibatis/postgresql-functions.xml" />
	<sqlMap resource="org/vortikal/repository/store/db/ibatis/default-sql-maps.xml" />
	
</sqlMapConfig>