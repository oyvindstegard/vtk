<?xml version="1.0" encoding="UTF-8"?>
<project
 xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>vortikal</groupId>
  <artifactId>vortikal</artifactId>
  <version>0.3.2-SNAPSHOT</version>
  <name>The Vortikal Web Framework</name>
  <organization>
    <name>Vortikal Project</name>
    <url>http://vortikal.berlios.de/</url>
  </organization>
  <packaging>jar</packaging>
  <build>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <directory>src/main/ftl</directory>
        <excludes>
          <exclude>**/README</exclude>
        </excludes>
        <targetPath>vortikal/ftl</targetPath>
      </resource>
      <resource>
        <directory>src/main/sql/</directory>
        <targetPath>vortikal/sql/</targetPath>
        <includes>
          <include>*-schema.sql</include>
        </includes>
      </resource>
      <resource>
        <directory>ext/kupu/v1.3.5</directory>
        <targetPath>vortikal/resources/kupu-resources</targetPath>
        <includes>
          <include>common/**</include>
          <include>i18n/**</include>
        </includes>
      </resource>
    </resources>

    <plugins>
      <plugin>
        <groupId>no.uio.usit.mvn.plugins</groupId>
        <artifactId>maven-framework-version-plugin</artifactId>
        <executions>
          <execution>
            <id>touch</id>
            <configuration>
              <outputDirectory>classes/org/vortikal/util/</outputDirectory>
            </configuration>
            <goals>
              <goal>touch</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>javacc-maven-plugin</artifactId>
        <executions>
          <!--
            <execution>
            <id>jjtree</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jjtree</goal>
            </goals>
            <configuration>
              <sourceDirectory>src/main/java/org/vortikal/repositoryimpl/query/parser/</sourceDirectory>
              <outputDirectory>src/main/generated-java/org/vortikal/repositoryimpl/query/parser</outputDirectory>
            </configuration>
          </execution>
  -->
          <execution>
            <id>javacc</id>
            <!--
            <phase>generate-sources</phase>
              -->
            <goals>
              <goal>javacc</goal>
            </goals>
            <configuration>
<!--
              <packageName>org.vortikal.repositoryimpl.query.parser</packageName>
              <sourceDirectory>src/main/generated-java/</sourceDirectory>
              <outputDirectory>src/main/generated-java</outputDirectory>
-->
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/main/java-sandbox</source>
                <source>src/main/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
