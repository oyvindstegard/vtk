    <webappDir>${project.build.directory}/${project.build.finalName}</webappDir>
  </properties>
  
  <packaging>${packaging}</packaging>
  
  <profiles>
    <profile>
      <id>jar</id>
      <activation>
        <property>
          <name>packaging</name>
          <value>jar</value>
        </property>
      </activation>
      <distributionManagement>
        <repository>
          <id>xml.uio.no</id>
          <name>Maven repository on xml.uio.no</name>
          <url>scpexe://xml.uio.no/site/var/virtual/no.uio.xml_80/htdocs/vortex/maven2</url>
        </repository>
      </distributionManagement>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-release-plugin</artifactId>
            <configuration>
              <tagBase>
                svn+ssh://element.uio.no/svnroot/vortikal/tags
              </tagBase>
            </configuration>
          </plugin>
	  <plugin>
	    <artifactId>maven-one-plugin</artifactId>
	    <executions>
	      <execution>
		<configuration>
		  <remoteRepositoryId>maven1-repo@xml.uio.no</remoteRepositoryId>
		  <remoteRepositoryUrl>scpexe://xml.uio.no/site/var/virtual/no.uio.xml_80/htdocs/vortex/maven</remoteRepositoryUrl>
		</configuration>
		<goals>
		  <goal>deploy-maven-one-repository</goal>
		</goals>
	      </execution>
	    </executions>
	  </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
              <source>1.4</source>
              <target>1.4</target>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  
  <build>
    <defaultGoal>package</defaultGoal>
    <filters>
      <filter>src/main/resources/vortikal/beans/vortikal.properties</filter>
    </filters>
    <resources>
      <!-- Magic start -->
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources/${packaging}/resin</directory>
      </resource>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources/${packaging}/filtered-resources</directory>
      </resource>
      <!-- magic end -->
      <resource>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>war/</exclude>
        </excludes>
      </resource>
      <resource>
        <directory>src/main/ftl</directory>
        <excludes>
          <exclude>**/README</exclude>
        </excludes>
        <targetPath>vortikal/ftl</targetPath>
      </resource>
      <resource>
        <directory>src/main/sql/</directory>
        <targetPath>vortikal/sql/</targetPath>
        <includes>
          <include>*-schema.sql</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/ext/kupu/v1.3.5</directory>
        <targetPath>vortikal/resources/kupu-resources</targetPath>
        <includes>
          <include>common/**</include>
          <include>i18n/**</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/xdocs</directory>
        <targetPath>vortikal-changes</targetPath>
        <includes>
          <include>changes.xml</include>
        </includes>
      </resource>
    </resources>
    
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-surefire-plugin</artifactId>
	<configuration>
	  <excludes>
	    <exclude>**/Abstract*.java</exclude>
	    <!-- Threaded tests -->
	    <exclude>**/SimpleDateFormatCacheTestCase.java</exclude>
	    <exclude>**/SimpleMethodInvokingTriggerBeanTestCase.java</exclude>
	    <exclude>**/SimpleFileSystemContentStoreTestCase.java</exclude>
	    <exclude>**/MemoryContentStoreTestCase.java</exclude>
	  </excludes>
	  <includes>
	    <include>**/*Test.java</include>
	    <!--
	    <include>**/*TestSuite.java</include>
	      -->
	    <include>**/*TestCase.java</include>
	  </includes>
	  <skip>true</skip>
	</configuration>
      </plugin>
      <plugin>
        <groupId>no.uio.usit.mvn.plugins</groupId>
        <artifactId>maven-framework-version-plugin</artifactId>
        <version>1.0-SNAPSHOT</version>
        <executions>
          <execution>
            <id>touch</id>
            <configuration>
              <outputDirectory>classes/org/vortikal/util/</outputDirectory>
            </configuration>
            <goals>
              <goal>touch</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>javacc-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>javacc</id>
            <goals>
              <goal>javacc</goal>
            </goals>
            <configuration>
	      <!--
              <packageName>org.vortikal.repositoryimpl.query.parser</packageName>
              <sourceDirectory>src/main/generated-java/</sourceDirectory>
              <outputDirectory>src/main/generated-java</outputDirectory>
	      -->
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  
