<?xml version="1.0" encoding="UTF-8"?>
<project
 xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>vortikal</groupId>
  <artifactId>vortikal</artifactId>
  <version>0.3-SNAPSHOT</version>
  <name>The Vortikal Web Framework</name>
  <organization>
    <name>Vortikal Project</name>
    <url>http://vortikal.berlios.de/</url>
  </organization>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <directory>src/main/ftl</directory>
        <excludes>
          <exclude>**/README</exclude>
        </excludes>
        <targetPath>vortikal/ftl</targetPath>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>no.uio.usit.mvn.plugins</groupId>
        <artifactId>maven-velocity-plugin</artifactId>
        <executions>
          <execution>
            <id>merge</id>
            <goals>
              <goal>merge</goal>
            </goals>
            <configuration>
	      <outputDirectory>target</outputDirectory>
	      <templateDirectory>src/main/resources/velocity</templateDirectory>
	      <propertyFiles>
		<propertyFile>project.properties</propertyFile>
		<propertyFile>build.properties</propertyFile>
		<propertyFile>conf/beans/vortikal.properties</propertyFile>
	      </propertyFiles>
	      <properties>
		<targetPath>${project.build.directory}</targetPath>
		<logPath>${project.build.directory}/logs</logPath>
		<!--
		<srunPort>${srunPort}</srunPort>
		-->
		<webappDir>${maven.war.webapp.dir}</webappDir>
		<beanConfigDir>${destination.beanconfig.dir}</beanConfigDir>
	      </properties>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>no.uio.usit.mvn.plugins</groupId>
        <artifactId>maven-framework-version-plugin</artifactId>
        <executions>
          <execution>
            <id>touch</id>
            <configuration>
              <outputDirectory>classes/org/vortikal/util/</outputDirectory>
            </configuration>
            <goals>
              <goal>touch</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>javacc-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>jjtree</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jjtree</goal>
            </goals>
            <configuration>
              <!--
              <nodePackage>org.vortikal.repositoryimpl.queryparser</nodePackage>
              -->
              <sourceDirectory>src/main/java/org/vortikal/repositoryimpl/queryparser/</sourceDirectory>
              <outputDirectory>src/main/generated-java/org/vortikal/repositoryimpl/queryparser</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>javacc</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>javacc</goal>
            </goals>
            <configuration>
              <packageName>org.vortikal.repositoryimpl.queryparser</packageName>
              <sourceDirectory>src/main/generated-java/</sourceDirectory>
              <outputDirectory>src/main/generated-java</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>sandbox/src/java</source>
                <source>src/main/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.9</version>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring</artifactId>
      <version>1.2.6</version>
    </dependency>
    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.3</version>
    </dependency>
    <dependency>
      <groupId>quartz</groupId>
      <artifactId>quartz</artifactId>
      <version>1.5.1</version>
    </dependency>
    <dependency>
      <groupId>freemarker</groupId>
      <artifactId>freemarker</artifactId>
      <version>2.3.4</version>
    </dependency>
    <dependency>
      <groupId>jug</groupId>
      <artifactId>jug</artifactId>
      <version>1.1.2</version>
    </dependency>
    <dependency>
      <groupId>lucene</groupId>
      <artifactId>lucene-core</artifactId>
      <version>1.9.1</version>
    </dependency>
    <dependency>
      <groupId>bsh</groupId>
      <artifactId>bsh</artifactId>
      <version>2.0b1</version>
    </dependency>
    <dependency>
      <groupId>concurrent</groupId>
      <artifactId>concurrent</artifactId>
      <version>1.3.4</version>
    </dependency>
    <dependency>
      <groupId>rome</groupId>
      <artifactId>rome</artifactId>
      <version>0.8</version>
    </dependency>
    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>2.4.0</version>
    </dependency>
    <dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
      <version>1.3</version>
    </dependency>
    <dependency>
      <groupId>groovy</groupId>
      <artifactId>groovy-all-1.0-jsr</artifactId>
      <version>04</version>
    </dependency>
    <dependency>
      <groupId>jtidy</groupId>
      <artifactId>jtidy</artifactId>
      <version>4aug2000r7-dev</version>
    </dependency>
    <dependency>
      <groupId>opensymphony</groupId>
      <artifactId>sitemesh</artifactId>
      <version>2.2.1</version>
    </dependency>
    <dependency>
      <groupId>com.ibatis</groupId>
      <artifactId>ibatis2-common</artifactId>
      <version>2.1.6.589</version>
    </dependency>
    <dependency>
      <groupId>com.ibatis</groupId>
      <artifactId>ibatis2-sqlmap</artifactId>
      <version>2.1.6.589</version>
    </dependency>
  </dependencies>
</project>
